{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <!-- Lecturer View - Manajemen Kursus -->
        <div class="kursus-admin-container">
          <div class="kursus-header">
            <h2 class="kursus-admin-title">Manajemen Kursus</h2>
          </div>

        {{#if courses.length}}
        <div class="kursus-card">
          {{#each courses}}
          <div class="kursus-item">
            <div class="kursus-info">
              <div class="kursus-icon"></div>
              <div class="kursus-content">
                <h3 class="kursus-title">{{this.title}}</h3>
                <p class="kursus-schedule">
                  {{#if this.schedule_day}}
                    {{this.schedule_day}}
                    {{#if this.schedule_time_start}} - {{this.schedule_time_start}}{{/if}}
                    {{#if this.schedule_time_end}} s/d {{this.schedule_time_end}}{{/if}}
                  {{/if}}
                </p>
              </div>
            </div>
            <div class="kursus-actions">
              <button class="kursus-btn kursus-btn-student" onclick="window.location.href='/kursus/{{this.id}}/students'">Siswa</button>
              <button class="kursus-btn kursus-btn-edit" 
                data-id="{{this.id}}" 
                data-title="{{this.title}}" 
                data-description="{{this.description}}" 
                data-meet-link="{{this.meet_link}}" 
                data-schedule-day="{{this.schedule_day}}" 
                data-schedule-time-start="{{this.schedule_time_start}}" 
                data-schedule-time-end="{{this.schedule_time_end}}"
                onclick="openEditModalData(this)">
                Edit
              </button>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Anda belum memiliki kursus yang diajar.</p>
            <p class="empty-sub">Kursus akan muncul setelah admin menambahkan Anda sebagai pengajar</p>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </section>
</main>

<!-- Modal Edit Kursus -->
<div id="editKursusModal" class="kursus-modal">
  <div class="kursus-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Edit Kursus</h3>
    
    <form id="editKursusForm" method="POST">
      <input type="text" name="title" id="editTitle" placeholder="Nama Kursus" required class="modal-input"/>
      
      <textarea name="description" id="editDescription" placeholder="Deskripsi" class="modal-input" rows="3"></textarea>
      
      <input type="url" name="meet_link" id="editMeetLink" placeholder="Link Meet Kursus" class="modal-input"/>
      
      <select name="schedule_day" id="editScheduleDay" class="modal-select">
        <option value="">Pilih Hari</option>
        <option value="Senin">Senin</option>
        <option value="Selasa">Selasa</option>
        <option value="Rabu">Rabu</option>
        <option value="Kamis">Kamis</option>
        <option value="Jumat">Jumat</option>
        <option value="Sabtu">Sabtu</option>
        <option value="Minggu">Minggu</option>
      </select>
      
      <div class="time-input-group">
        <div class="time-input-wrapper">
          <label class="time-label">Mulai</label>
          <input type="time" name="schedule_time_start" id="editScheduleStart" class="modal-input time-input"/>
        </div>
        <div class="time-input-wrapper">
          <label class="time-label">Selesai</label>
          <input type="time" name="schedule_time_end" id="editScheduleEnd" class="modal-input time-input"/>
        </div>
      </div>
      
      <div class="modal-actions">
        <button type="submit" class="modal-btn modal-btn-edit">Edit</button>
        <button type="button" class="modal-btn modal-btn-batal" onclick="closeEditModal()">Batal</button>
      </div>
    </form>
  </div>
</div>

<script>
function openEditModalData(btn) {
  const id = btn.getAttribute('data-id');
  const title = btn.getAttribute('data-title');
  const description = btn.getAttribute('data-description');
  const meetLink = btn.getAttribute('data-meet-link');
  const scheduleDay = btn.getAttribute('data-schedule-day');
  const scheduleStart = btn.getAttribute('data-schedule-time-start');
  const scheduleEnd = btn.getAttribute('data-schedule-time-end');
  
  document.getElementById('editTitle').value = title || '';
  document.getElementById('editDescription').value = description || '';
  document.getElementById('editMeetLink').value = meetLink || '';
  document.getElementById('editScheduleDay').value = scheduleDay || '';
  document.getElementById('editScheduleStart').value = scheduleStart || '';
  document.getElementById('editScheduleEnd').value = scheduleEnd || '';
  
  document.getElementById('editKursusForm').action = `/kursus/${id}/edit`;
  document.getElementById('editKursusModal').style.display = 'flex';
}

function closeEditModal() {
  document.getElementById('editKursusModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const editModal = document.getElementById('editKursusModal');
  if (event.target === editModal) {
    closeEditModal();
  }
}
</script>

