<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <div class="management-header">
          <h2 class="management-title">Manajemen Materi</h2>
          <p class="management-subtitle">Kelola materi pembelajaran kursus Anda</p>
        </div>

        {{#if courses.length}}
        <div class="course-grid">
          {{#each courses}}
          <div class="course-item-card">
            <div class="course-item-info">
              <div class="course-item-icon" style="{{#if this.thumbnail}}background-image: url('{{this.thumbnail}}');{{/if}}">{{#unless this.thumbnail}}üìö{{/unless}}</div>
              <div class="course-item-content">
                <h3>{{this.title}}</h3>
              </div>
            </div>
            <div class="course-item-actions">
              <button class="btn-action btn-tambah" onclick="openTambahMateriModal('{{this.id}}', '{{this.title}}')">Tambah</button>
              <button class="btn-action btn-kelola" onclick="openManageMateriModal('{{this.id}}', '{{this.title}}')">Edit</button>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="empty-courses">
          <p class="empty-message">Belum ada kursus terdaftar</p>
          <p class="empty-sub">Kursus akan muncul setelah ditambahkan di menu Manajemen Kursus</p>
        </div>
        {{/if}}
      </div>
    </div>
  </section>
</main>

