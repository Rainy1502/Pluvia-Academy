<script>
// Store courses data for managing materials
const coursesData = {{{json courses}}};
let deleteMateriTarget = { id: null, title: null };

// Upload file to server
async function uploadToServer(file, folder = 'thumbnails') {
  try {
    const formData = new FormData();
    formData.append('image', file);
    formData.append('folder', folder);

    const response = await fetch('/api/upload/upload', {
      method: 'POST',
      body: formData
    });

    if (!response.ok) {
      const errorText = await response.text();
      throw new Error(`Upload failed: ${response.status} - ${errorText}`);
    }

    const result = await response.json();

    if (!result.success) {
      throw new Error(result.message || 'Upload failed');
    }

    return result.url;
  } catch (error) {
    console.error('Error uploading file:', error);
    throw error;
  }
}

// Handle file input label change for Tambah modal
document.addEventListener('DOMContentLoaded', function() {
  const materiThumbnailInput = document.getElementById('materiThumbnailInput');
  if (materiThumbnailInput) {
    materiThumbnailInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling;
      const span = label.querySelector('span:first-child');
      if (this.files && this.files[0]) {
        span.textContent = this.files[0].name;
      } else {
        span.textContent = 'Pilih Gambar';
      }
    });
  }

  const editMateriThumbnailInput = document.getElementById('editMateriThumbnailInput');
  if (editMateriThumbnailInput) {
    editMateriThumbnailInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling;
      const span = label.querySelector('span:first-child');
      if (this.files && this.files[0]) {
        span.textContent = this.files[0].name;
      } else {
        span.textContent = 'Pilih Gambar';
      }
    });
  }

  const materiPdfInput = document.getElementById('materiPdfInput');
  if (materiPdfInput) {
    materiPdfInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling;
      const span = label.querySelector('span:first-child');
      if (this.files && this.files[0]) {
        span.textContent = this.files[0].name;
      } else {
        span.textContent = 'Pilih File PDF';
      }
    });
  }

  const editMateriPdfInput = document.getElementById('editMateriPdfInput');
  if (editMateriPdfInput) {
    editMateriPdfInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling;
      const span = label.querySelector('span:first-child');
      if (this.files && this.files[0]) {
        span.textContent = this.files[0].name;
      } else {
        span.textContent = 'Pilih File PDF';
      }
    });
  }

  // Handle tambah materi form submission
  const tambahMateriForm = document.getElementById('tambahMateriForm');
  if (tambahMateriForm) {
    tambahMateriForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      
      try {
        submitBtn.disabled = true;
        
        const fileInput = document.getElementById('materiThumbnailInput');
        if (fileInput.files && fileInput.files[0]) {
          submitBtn.textContent = 'Mengunggah Gambar...';
          const thumbnailUrl = await uploadToServer(fileInput.files[0], 'materials');
          document.getElementById('materiThumbnailUrl').value = thumbnailUrl;
        }
        
        const pdfInput = document.getElementById('materiPdfInput');
        if (pdfInput.files && pdfInput.files[0]) {
          submitBtn.textContent = 'Mengunggah PDF...';
          const pdfUrl = await uploadToServer(pdfInput.files[0], 'materials');
          document.getElementById('materiPdfUrl').value = pdfUrl;
        }
        
        submitBtn.textContent = 'Menyimpan...';
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  }

  // Handle edit materi form submission
  const editMateriForm = document.getElementById('editMateriForm');
  if (editMateriForm) {
    editMateriForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      
      try {
        submitBtn.disabled = true;
        
        const fileInput = document.getElementById('editMateriThumbnailInput');
        if (fileInput.files && fileInput.files[0]) {
          submitBtn.textContent = 'Mengunggah Gambar...';
          const thumbnailUrl = await uploadToServer(fileInput.files[0], 'materials');
          document.getElementById('editMateriThumbnailUrl').value = thumbnailUrl;
        }
        
        const pdfInput = document.getElementById('editMateriPdfInput');
        if (pdfInput.files && pdfInput.files[0]) {
          submitBtn.textContent = 'Mengunggah PDF...';
          const pdfUrl = await uploadToServer(pdfInput.files[0], 'materials');
          document.getElementById('editMateriPdfUrl').value = pdfUrl;
        }
        
        submitBtn.textContent = 'Menyimpan...';
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  }
});

function openTambahMateriModal(courseId, courseName) {
  document.getElementById('tambahCourseId').value = courseId;
  document.getElementById('courseNameDisplay').textContent = courseName;
  document.getElementById('tambahMateriModal').style.display = 'flex';
}

function closeTambahMateriModal() {
  document.getElementById('tambahMateriModal').style.display = 'none';
  document.getElementById('tambahMateriForm').reset();
}

let currentCourseId = null;

function openManageMateriModal(courseId, courseName) {
  currentCourseId = courseId;
  document.getElementById('manageCourseNameDisplay').textContent = courseName;
  
  // Find course materials
  const course = coursesData.find(c => c.id === courseId);
  const materials = course ? course.materials : [];
  
  // Show/hide delete all button
  const deleteAllBtn = document.getElementById('deleteAllMateriBtn');
  if (materials.length > 0) {
    deleteAllBtn.style.display = 'inline-block';
  } else {
    deleteAllBtn.style.display = 'none';
  }
  
  // Build materials list HTML
  let html = '';
  if (materials.length === 0) {
    html = '<p style="text-align:center; color:#666; padding:20px;">Belum ada materi untuk kursus ini</p>';
  } else {
    html = '<div class="manage-materi-list">';
    materials.forEach(material => {
      html += `
        <div class="manage-materi-item">
          <div class="manage-materi-info">
            <h4>${material.title}</h4>
            ${material.description ? `<p>${material.description}</p>` : ''}
          </div>
          <div class="manage-materi-actions">
            <button class="modal-btn-small modal-btn-edit" onclick="openEditMateriModal('${material.id}', '${material.title}', '${material.description || ''}', '${material.thumbnail || ''}', '${material.ordinal}', '${material.media_url || ''}')">Edit</button>
            <button class="modal-btn-small modal-btn-hapus" onclick="deleteMaterialFromManage('${material.id}', '${material.title}')">Hapus</button>
          </div>
        </div>
      `;
    });
    html += '</div>';
  }
  
  document.getElementById('materiListContainer').innerHTML = html;
  document.getElementById('manageMateriModal').style.display = 'flex';
}

function closeManageMateriModal() {
  document.getElementById('manageMateriModal').style.display = 'none';
}

function openEditMateriModal(id, title, description, thumbnail, ordinal, fileUrl) {
  // Close manage modal first
  closeManageMateriModal();
  
  document.getElementById('editMateriTitle').value = title || '';
  document.getElementById('editMateriDescription').value = description || '';
  document.getElementById('editMateriOrdinal').value = ordinal || '';
  document.getElementById('editMateriThumbnailUrl').value = thumbnail || '';
  document.getElementById('editMateriPdfUrl').value = fileUrl || '';
  document.getElementById('editMateriForm').action = `/materi/${id}/edit`;
  
  // Update file label with existing filename for thumbnail
  const editLabel = document.querySelector('#editMateriThumbnailInput + label span:first-child');
  if (editLabel && thumbnail) {
    const filename = thumbnail.split('/').pop();
    editLabel.textContent = filename;
  } else if (editLabel) {
    editLabel.textContent = 'Pilih Gambar';
  }
  
  // Update file label with existing filename for PDF
  const editPdfLabel = document.querySelector('#editMateriPdfInput + label span:first-child');
  if (editPdfLabel && fileUrl) {
    const pdfFilename = fileUrl.split('/').pop();
    editPdfLabel.textContent = pdfFilename;
  } else if (editPdfLabel) {
    editPdfLabel.textContent = 'Pilih File PDF';
  }
  
  document.getElementById('editMateriModal').style.display = 'flex';
}

function closeEditMateriModal() {
  document.getElementById('editMateriModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const tambahModal = document.getElementById('tambahMateriModal');
  const manageModal = document.getElementById('manageMateriModal');
  const editModal = document.getElementById('editMateriModal');
  
  if (event.target === tambahModal) {
    closeTambahMateriModal();
  }
  if (event.target === manageModal) {
    closeManageMateriModal();
  }
  if (event.target === editModal) {
    closeEditMateriModal();
  }
}

function deleteCourse(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus kursus "${title}"?\n\nPeringatan: Semua materi di kursus ini juga akan terhapus!`)) {
    fetch(`/kursus/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      window.location.reload();
    });
  }
}

function deleteMaterialFromManage(id, title) {
  deleteMateriTarget = { id, title };
  document.getElementById('deleteMateriMessage').textContent = `Apakah Anda yakin ingin menghapus materi "${title}"?`;
  document.getElementById('deleteMateriModal').style.display = 'flex';
}

function closeDeleteMateriModal() {
  document.getElementById('deleteMateriModal').style.display = 'none';
  deleteMateriTarget = { id: null, title: null };
}

function confirmDeleteMateri() {
  if (!deleteMateriTarget.id) return;
  
  fetch(`/materi/${deleteMateriTarget.id}`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      console.error('Failed to delete material');
      window.location.reload();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    window.location.reload();
  })
  .finally(() => {
    closeDeleteMateriModal();
  });
}

function deleteAllMaterials() {
  if (!currentCourseId) return;
  
  const course = coursesData.find(c => c.id === currentCourseId);
  const materials = course ? course.materials : [];
  
  if (materials.length === 0) return;
  
  document.getElementById('deleteAllMateriMessage').textContent = 
    `Apakah Anda yakin ingin menghapus SEMUA materi (${materials.length} materi) dari kursus ini?\n\nPeringatan: Tindakan ini tidak dapat dibatalkan!`;
  document.getElementById('deleteAllMateriModal').style.display = 'flex';
}

function closeDeleteAllMateriModal() {
  document.getElementById('deleteAllMateriModal').style.display = 'none';
}

function confirmDeleteAllMateri() {
  if (!currentCourseId) return;
  
  const course = coursesData.find(c => c.id === currentCourseId);
  const materials = course ? course.materials : [];
  
  if (materials.length === 0) return;
  
  const deletePromises = materials.map(material => 
    fetch(`/materi/${material.id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
  );
  
  Promise.all(deletePromises)
    .then(responses => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      window.location.reload();
    })
    .finally(() => {
      closeDeleteAllMateriModal();
    });
}

// Close modal when clicking outside
window.onclick = function(event) {
  const deleteMateriModal = document.getElementById('deleteMateriModal');
  const deleteAllMateriModal = document.getElementById('deleteAllMateriModal');
  
  if (event.target === deleteMateriModal) {
    closeDeleteMateriModal();
  }
  if (event.target === deleteAllMateriModal) {
    closeDeleteAllMateriModal();
  }
}
</script>

