<script>
const originalPrice = parseFloat(document.getElementById('originalPrice').value);
let appliedDiscountCode = '';
let appliedDiscountPercent = 0;
let selectedMethod = '';

function formatRupiah(amount) {
  return 'Rp' + Math.floor(amount).toLocaleString('id-ID');
}

async function applyDiscount() {
  const code = document.getElementById('discountInput').value.trim().toUpperCase();
  const statusDiv = document.getElementById('discountStatus');
  
  if (!code) {
    statusDiv.innerHTML = '<div class="discount-status error">Masukkan kode promo terlebih dahulu</div>';
    setTimeout(() => statusDiv.innerHTML = '', 3000);
    return;
  }

  // Validate promo code from database via API
  try {
    const packageId = document.querySelector('input[name="package_id"]').value;
    
    const response = await fetch('/api/validate-promo', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ 
        code,
        packageId 
      })
    });

    const result = await response.json();

    if (result.valid) {
      const percent = result.discount_percentage;
      const discountAmount = originalPrice * (percent / 100);
      const finalPrice = originalPrice - discountAmount;

      // Update display
      document.getElementById('discountPercent').textContent = percent;
      document.getElementById('discountAmount').textContent = '- ' + formatRupiah(discountAmount);
      document.getElementById('finalPrice').textContent = formatRupiah(finalPrice);
      document.getElementById('discountRow').style.display = 'flex';
      document.getElementById('originalPriceDisplay').classList.add('strike');
      document.getElementById('displayPrice').textContent = formatRupiah(finalPrice);

      // Update hidden inputs
      document.getElementById('discountPercentage').value = percent;
      document.getElementById('discountCode').value = code;

      // Save applied discount
      appliedDiscountCode = code;
      appliedDiscountPercent = percent;

      // Show success message
      statusDiv.innerHTML = `<div class="discount-status success">‚úì ${result.message}</div>`;
      
      // Disable input after success
      document.getElementById('discountInput').disabled = true;
    } else {
      statusDiv.innerHTML = `<div class="discount-status error">‚úó ${result.message}</div>`;
      setTimeout(() => statusDiv.innerHTML = '', 3000);
    }
  } catch (error) {
    console.error('Error validating promo code:', error);
    statusDiv.innerHTML = '<div class="discount-status error">‚úó Terjadi kesalahan saat memvalidasi kode promo</div>';
    setTimeout(() => statusDiv.innerHTML = '', 3000);
  }
}

// Open payment method modal
function openPaymentMethodModal() {
  const form = document.getElementById('paymentForm');
  
  // Validate form
  const email = document.querySelector('input[name="email"]').value.trim();
  const phone = document.querySelector('input[name="phone"]').value.trim();
  const accountNumber = document.querySelector('input[name="account_number"]').value.trim();

  if (!email) {
    alert('Email wajib diisi!');
    return;
  }

  if (!phone) {
    alert('Nomor telepon wajib diisi!');
    return;
  }

  if (!accountNumber) {
    alert('Nomor rekening / E-Wallet wajib diisi!');
    return;
  }

  // Update modal with current prices
  const finalPrice = appliedDiscountPercent > 0 
    ? originalPrice - (originalPrice * appliedDiscountPercent / 100)
    : originalPrice;

  document.getElementById('modalOriginalPrice').textContent = formatRupiah(originalPrice);
  document.getElementById('modalFinalPrice').textContent = formatRupiah(finalPrice);

  if (appliedDiscountPercent > 0) {
    const discountAmount = originalPrice * (appliedDiscountPercent / 100);
    document.getElementById('modalDiscountPercent').textContent = appliedDiscountPercent;
    document.getElementById('modalDiscountAmount').textContent = '- ' + formatRupiah(discountAmount);
    document.getElementById('modalDiscountRow').style.display = 'flex';
  }

  // Show modal
  document.getElementById('paymentMethodModal').style.display = 'block';
}

// Close payment method modal
function closePaymentMethodModal() {
  document.getElementById('paymentMethodModal').style.display = 'none';
}

// Select payment method
function selectPaymentMethod(method, element) {
  // Remove previous selection
  document.querySelectorAll('.payment-method-card').forEach(card => {
    card.classList.remove('selected');
  });
  
  // Add selection
  element.classList.add('selected');
  selectedMethod = method;
  document.getElementById('selectedPaymentMethod').value = method;
  
  // Enable confirm button
  document.getElementById('btnConfirmPayment').disabled = false;
}

// Confirm payment
function confirmPayment() {
  if (!selectedMethod) {
    alert('Pilih metode pembayaran terlebih dahulu!');
    return;
  }

  // Add payment method to form
  const form = document.getElementById('paymentForm');
  const methodInput = document.createElement('input');
  methodInput.type = 'hidden';
  methodInput.name = 'payment_method';
  methodInput.value = selectedMethod;
  form.appendChild(methodInput);

  // Submit form
  form.submit();
}

// Close modal when clicking outside
window.onclick = function(event) {
  const modal = document.getElementById('paymentMethodModal');
  if (event.target == modal) {
    closePaymentMethodModal();
  }
}

// Allow Enter key to apply discount
document.getElementById('discountInput')?.addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    e.preventDefault();
    applyDiscount();
  }
});

// Form validation before submit
document.getElementById('paymentForm')?.addEventListener('submit', function(e) {
  const email = document.querySelector('input[name="email"]').value.trim();
  const phone = document.querySelector('input[name="phone"]').value.trim();
  const accountNumber = document.querySelector('input[name="account_number"]').value.trim();

  if (!email) {
    e.preventDefault();
    alert('Email wajib diisi!');
    return false;
  }

  if (!phone) {
    e.preventDefault();
    alert('Nomor telepon wajib diisi!');
    return false;
  }

  if (!accountNumber) {
    e.preventDefault();
    alert('Nomor rekening / E-Wallet wajib diisi!');
    return false;
  }

  // Validasi email format
  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailRegex.test(email)) {
    e.preventDefault();
    alert('Format email tidak valid!');
    return false;
  }

  // Validasi phone (harus angka)
  if (!/^\d+$/.test(phone)) {
    e.preventDefault();
    alert('Nomor telepon hanya boleh berisi angka!');
    return false;
  }

  // All validations passed
  return true;
});
</script>

