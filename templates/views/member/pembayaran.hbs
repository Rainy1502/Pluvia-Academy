<style>
  .payment-page {
    min-height: calc(100vh - 80px);
    background: #2d75ca;
    padding: 120px 20px 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .payment-container {
    background: #ffffff;
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 600px;
    width: 100%;
    padding: 48px;
    animation: slideUp 0.5s ease;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .payment-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .payment-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .payment-logo img {
    width: 56px;
    height: 56px;
    object-fit: contain;
  }

  .payment-logo h2 {
    font-size: 2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
  }

  .payment-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
  }

  .payment-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .form-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 4px;
  }

  .form-input {
    width: 100%;
    padding: 14px 16px;
    font-size: 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    background: #ffffff;
    color: #1a202c;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .form-input:focus {
    outline: none;
    border-color: #00d4ff;
    box-shadow: 0 0 0 4px rgba(0, 212, 255, 0.1);
  }

  .form-input::placeholder {
    color: #a0aec0;
  }

  .form-input:disabled {
    background: #f7fafc;
    color: #718096;
    cursor: not-allowed;
    border-color: #e2e8f0;
  }

  .package-display {
    background: linear-gradient(135deg, #00d4ff15 0%, #007bff15 100%);
    border: 2px dashed #00d4ff;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .package-thumbnail {
    width: 100%;
    max-width: 400px;
    height: 200px;
    border-radius: 8px;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .package-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .package-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #007bff;
    margin: 0;
  }

  .package-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: #1a202c;
    margin-top: 8px;
  }

  .discount-section {
    background: #f7fafc;
    border-radius: 12px;
    padding: 20px;
  }

  .discount-header {
    font-size: 0.875rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 12px;
  }

  .discount-input-group {
    display: flex;
    gap: 12px;
  }

  .discount-input {
    flex: 1;
    padding: 12px 16px;
    font-size: 0.95rem;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    background: #ffffff;
    transition: all 0.3s ease;
  }

  .discount-input:focus {
    outline: none;
    border-color: #00d4ff;
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
  }

  .apply-btn {
    padding: 12px 24px;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    color: #ffffff;
    border: none;
    border-radius: 10px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .apply-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 123, 255, 0.4);
  }

  .apply-btn:active {
    transform: translateY(0);
  }

  .discount-status {
    margin-top: 12px;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    text-align: center;
  }

  .discount-status.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .discount-status.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .price-summary {
    background: linear-gradient(135deg, #f6f8fb 0%, #f1f3f6 100%);
    border-radius: 16px;
    padding: 24px;
    margin-top: 8px;
  }

  .price-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    font-size: 0.95rem;
  }

  .price-row:last-child {
    margin-bottom: 0;
  }

  .price-label {
    color: #718096;
    font-weight: 500;
  }

  .price-value {
    color: #1a202c;
    font-weight: 600;
  }

  .price-value.discount {
    color: #28a745;
  }

  .price-value.strike {
    text-decoration: line-through;
    color: #a0aec0;
    font-size: 0.875rem;
  }

  .total-row {
    border-top: 2px solid #e2e8f0;
    padding-top: 16px;
    margin-top: 16px;
  }

  .total-label {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1a202c;
  }

  .total-value {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .submit-btn {
    width: 100%;
    padding: 16px 32px;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    color: #ffffff;
    border: none;
    border-radius: 12px;
    font-size: 1.125rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 8px;
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
  }

  .submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 123, 255, 0.5);
  }

  .submit-btn:active {
    transform: translateY(-1px);
  }

  .payment-note {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    border-radius: 8px;
    padding: 16px;
    margin-top: 24px;
  }

  .payment-note p {
    margin: 0;
    font-size: 0.875rem;
    color: #856404;
    line-height: 1.6;
  }

  .payment-note strong {
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .payment-container {
      padding: 32px 24px;
    }

    .payment-logo h2 {
      font-size: 1.5rem;
    }

    .payment-title {
      font-size: 1.5rem;
    }

    .discount-input-group {
      flex-direction: column;
    }

    .apply-btn {
      width: 100%;
    }
  }
</style>

<main class="payment-page">
  <div class="payment-container">
    <!-- Header -->
    <div class="payment-header">
      <div class="payment-logo">
        <img src="/img/logo-pngegg.png" alt="Pluvia Academy"/>
        <h2>Pluvia Academy</h2>
      </div>
      <h1 class="payment-title">Pembayaran Kursus</h1>
    </div>

    <!-- Package Display -->
    <div class="package-display">
      {{#if package.thumbnail}}
      <div class="package-thumbnail">
        <img src="{{package.thumbnail}}" alt="{{package.title}}" />
      </div>
      {{/if}}
      <p class="package-name">{{package.title}}</p>
      <p class="package-price" id="displayPrice">{{formatPrice package.price}}</p>
    </div>

    <!-- Payment Form -->
    <form class="payment-form" id="paymentForm" method="POST" action="/pembayaran/{{package.id}}/submit">
      <input type="hidden" name="package_id" value="{{package.id}}"/>
      <input type="hidden" id="originalPrice" value="{{package.price}}"/>
      <input type="hidden" id="discountPercentage" name="discount_percentage" value="0"/>
      <input type="hidden" id="discountCode" name="discount_code" value=""/>
      
      <!-- User Information -->
      <div class="form-section">
        <div class="form-group">
          <label class="form-label">Email</label>
          <input 
            type="email" 
            class="form-input" 
            name="email" 
            value="{{user.email}}" 
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label">Nomor Telepon</label>
          <input 
            type="tel" 
            class="form-input" 
            name="phone" 
            value="{{user.phone}}" 
            placeholder="08123456789"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label">Nomor Rekening / E-Wallet</label>
          <input 
            type="text" 
            class="form-input" 
            id="accountNumber"
            name="account_number" 
            placeholder="Contoh: 1234567890 atau 081234567890"
            required
          />
        </div>
      </div>

      <!-- Discount Section -->
      <div class="discount-section">
        <p class="discount-header">üéÅ Punya Kode Promo?</p>
        <div class="discount-input-group">
          <input 
            type="text" 
            class="discount-input" 
            id="discountInput"
            placeholder="Masukkan kode promo"
          />
          <button type="button" class="apply-btn" onclick="applyDiscount()">Terapkan</button>
        </div>
        <div id="discountStatus"></div>
      </div>

      <!-- Price Summary -->
      <div class="price-summary">
        <div class="price-row">
          <span class="price-label">Harga Paket</span>
          <span class="price-value" id="originalPriceDisplay">{{formatPrice package.price}}</span>
        </div>
        <div class="price-row" id="discountRow" style="display: none;">
          <span class="price-label">Diskon (<span id="discountPercent">0</span>%)</span>
          <span class="price-value discount" id="discountAmount">- Rp0</span>
        </div>
        <div class="price-row total-row">
          <span class="total-label">Total Pembayaran</span>
          <span class="total-value" id="finalPrice">{{formatPrice package.price}}</span>
        </div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">
        Lanjutkan Pembayaran ‚Üí
      </button>

      <!-- Payment Note -->
      <div class="payment-note">
        <p><strong>üìå Catatan:</strong> Setelah melakukan pembayaran, admin akan memverifikasi dalam waktu 1x24 jam. Anda akan menerima notifikasi melalui email setelah pembayaran dikonfirmasi.</p>
      </div>
    </form>
  </div>
</main>

<script>
const originalPrice = parseFloat(document.getElementById('originalPrice').value);
let appliedDiscountCode = '';
let appliedDiscountPercent = 0;

function formatRupiah(amount) {
  return 'Rp' + Math.floor(amount).toLocaleString('id-ID');
}

async function applyDiscount() {
  const code = document.getElementById('discountInput').value.trim().toUpperCase();
  const statusDiv = document.getElementById('discountStatus');
  
  if (!code) {
    statusDiv.innerHTML = '<div class="discount-status error">Masukkan kode promo terlebih dahulu</div>';
    setTimeout(() => statusDiv.innerHTML = '', 3000);
    return;
  }

  // Hardcoded discount codes for demo
  const discountCodes = {
    'PLUVIA10': 10,
    'PLUVIA20': 20,
    'WELCOME': 15,
    'STUDENT': 25,
    'PROMO50': 50
  };

  if (discountCodes[code]) {
    const percent = discountCodes[code];
    const discountAmount = originalPrice * (percent / 100);
    const finalPrice = originalPrice - discountAmount;

    // Update display
    document.getElementById('discountPercent').textContent = percent;
    document.getElementById('discountAmount').textContent = '- ' + formatRupiah(discountAmount);
    document.getElementById('finalPrice').textContent = formatRupiah(finalPrice);
    document.getElementById('discountRow').style.display = 'flex';
    document.getElementById('originalPriceDisplay').classList.add('strike');
    document.getElementById('displayPrice').textContent = formatRupiah(finalPrice);

    // Update hidden inputs
    document.getElementById('discountPercentage').value = percent;
    document.getElementById('discountCode').value = code;

    // Save applied discount
    appliedDiscountCode = code;
    appliedDiscountPercent = percent;

    // Show success message
    statusDiv.innerHTML = `<div class="discount-status success">‚úì Kode promo "${code}" berhasil diterapkan! Hemat ${formatRupiah(discountAmount)}</div>`;
    
    // Disable input after success
    document.getElementById('discountInput').disabled = true;
  } else {
    statusDiv.innerHTML = '<div class="discount-status error">‚úó Kode promo tidak valid atau sudah kadaluarsa</div>';
    setTimeout(() => statusDiv.innerHTML = '', 3000);
  }
}

// Allow Enter key to apply discount
document.getElementById('discountInput')?.addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    e.preventDefault();
    applyDiscount();
  }
});
</script>

