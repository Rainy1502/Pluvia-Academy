        <div class="form-group">
          <label class="form-label">Email</label>
          <input 
            type="email" 
            class="form-input" 
            name="email" 
            value="{{user.email}}" 
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label">Nomor Telepon</label>
          <input 
            type="tel" 
            class="form-input" 
            name="phone" 
            value="{{user.phone}}" 
            placeholder="08123456789"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label">Nomor Rekening / E-Wallet</label>
          <input 
            type="text" 
            class="form-input" 
            id="accountNumber"
            name="account_number" 
            placeholder="Contoh: 1234567890 atau 081234567890"
            required
          />
        </div>
