<script>
console.log('Payment script loaded');

let appliedDiscount = null;
const originalPrice = parseFloat(document.getElementById('originalPrice').value);
let currentDiscountData = {
  code: '',
  percentage: 0,
  discountAmount: 0,
  finalPrice: originalPrice
};

console.log('Original price:', originalPrice);

function formatRupiah(amount) {
  return 'Rp' + amount.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, '.');
}

async function applyDiscount() {
  const code = document.getElementById('discountCode').value.trim();
  const statusDiv = document.getElementById('discountStatus');
  
  if (!code) {
    statusDiv.innerHTML = '<p class="error-message">Masukkan kode diskon</p>';
    return;
  }

  try {
    const response = await fetch('/api/payment/validate-discount', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ code })
    });

    const result = await response.json();

    if (result.success) {
      appliedDiscount = result.discount;
      const discountAmount = originalPrice * (result.discount.percentage / 100);
      const finalPrice = originalPrice - discountAmount;

      // Update main form
      document.getElementById('discountPercentage').value = result.discount.percentage;
      document.getElementById('discountAmount').textContent = formatRupiah(discountAmount);
      document.getElementById('finalPrice').textContent = formatRupiah(finalPrice);
      document.getElementById('originalPriceDisplay').textContent = formatRupiah(originalPrice);
      document.getElementById('originalPriceDisplay').style.display = 'inline';

      // Save discount data
      currentDiscountData = {
        code: code,
        percentage: result.discount.percentage,
        discountAmount: discountAmount,
        finalPrice: finalPrice
      };

      statusDiv.innerHTML = `<div class="discount-applied">‚úì Diskon ${result.discount.percentage}% diterapkan!</div>`;
      document.getElementById('discountCode').disabled = true;
    } else {
      statusDiv.innerHTML = `<p class="error-message">${result.message}</p>`;
      resetDiscount();
    }
  } catch (error) {
    console.error('Error:', error);
    statusDiv.innerHTML = '<p class="error-message">Terjadi kesalahan saat memvalidasi kode diskon</p>';
  }
}

function resetDiscount() {
  appliedDiscount = null;
  document.getElementById('discountPercentage').value = '0';
  document.getElementById('discountAmount').textContent = 'Rp0';
  document.getElementById('finalPrice').textContent = formatRupiah(originalPrice);
  document.getElementById('originalPriceDisplay').style.display = 'none';
  
  currentDiscountData = {
    code: '',
    percentage: 0,
    discountAmount: 0,
    finalPrice: originalPrice
  };
}

// Open payment method modal
function openPaymentMethodModal() {
  console.log('Opening payment modal...');
  const form = document.getElementById('paymentForm');
  
  // Validate form fields
  if (!form.checkValidity()) {
    console.log('Form validation failed');
    form.reportValidity();
    return;
  }
  
  console.log('Form is valid, showing modal...');

  // Get form values
  const accountNumber = document.getElementById('accountNumber')?.value || '';
  const email = document.getElementById('email')?.value || '';
  const phone = document.getElementById('phone')?.value || '';
  const discountCode = document.getElementById('discountCode')?.value || '';
  const discountPercentage = document.getElementById('discountPercentage')?.value || '0';

  console.log('Form values:', { accountNumber, email, phone, discountCode, discountPercentage });

  // Transfer data to modal
  const modalAccountNumber = document.getElementById('modalAccountNumber');
  const modalEmail = document.getElementById('modalEmail');
  const modalPhone = document.getElementById('modalPhone');
  const modalDiscountCode = document.getElementById('modalDiscountCode');
  const modalDiscountPercentage = document.getElementById('modalDiscountPercentage');
  const modalOriginalPriceValue = document.getElementById('modalOriginalPriceValue');
  const modalFinalPriceValue = document.getElementById('modalFinalPriceValue');

  if (modalAccountNumber) modalAccountNumber.value = accountNumber;
  if (modalEmail) modalEmail.value = email;
  if (modalPhone) modalPhone.value = phone;
  if (modalDiscountCode) modalDiscountCode.value = discountCode;
  if (modalDiscountPercentage) modalDiscountPercentage.value = discountPercentage;
  if (modalOriginalPriceValue) modalOriginalPriceValue.value = originalPrice;
  if (modalFinalPriceValue) modalFinalPriceValue.value = currentDiscountData.finalPrice;

  // Update modal display
  const modalOriginalPrice = document.getElementById('modalOriginalPrice');
  const modalDiscountRow = document.getElementById('modalDiscountRow');
  const modalDiscountPercent = document.getElementById('modalDiscountPercent');
  const modalDiscountAmount = document.getElementById('modalDiscountAmount');
  const modalFinalPrice = document.getElementById('modalFinalPrice');

  if (modalOriginalPrice) modalOriginalPrice.textContent = formatRupiah(originalPrice);
  
  if (parseFloat(discountPercentage) > 0) {
    if (modalDiscountRow) modalDiscountRow.style.display = 'flex';
    if (modalDiscountPercent) modalDiscountPercent.textContent = discountPercentage;
    if (modalDiscountAmount) modalDiscountAmount.textContent = '- ' + formatRupiah(currentDiscountData.discountAmount);
  } else {
    if (modalDiscountRow) modalDiscountRow.style.display = 'none';
  }
  
  if (modalFinalPrice) modalFinalPrice.textContent = formatRupiah(currentDiscountData.finalPrice);

  // Show modal
  const modal = document.getElementById('paymentMethodModal');
  console.log('Modal element:', modal);
  if (modal) {
    modal.style.display = 'block';
    console.log('Modal displayed!');
  } else {
    console.error('Modal element not found!');
  }
}

// Close payment method modal
function closePaymentMethodModal() {
  document.getElementById('paymentMethodModal').style.display = 'none';
  
  // Reset selection
  document.querySelectorAll('.payment-method-card').forEach(card => {
    card.classList.remove('selected');
  });
  document.getElementById('selectedMethod').value = '';
  document.getElementById('btnPay').disabled = true;
}

// Select payment method
function selectMethod(method, element) {
  // Remove previous selection
  document.querySelectorAll('.payment-method-card').forEach(card => {
    card.classList.remove('selected');
  });
  
  // Add selection to clicked card
  element.classList.add('selected');
  
  // Set hidden input
  document.getElementById('selectedMethod').value = method;
  
  // Enable pay button
  document.getElementById('btnPay').disabled = false;
}

// Close modal when clicking outside
window.onclick = function(event) {
  const modal = document.getElementById('paymentMethodModal');
  if (event.target == modal) {
    closePaymentMethodModal();
  }
}
</script>

