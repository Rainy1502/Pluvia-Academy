<style>
  .payment-method-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #2d75ca 0%, #1e5ba8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    padding-top: 140px;
  }

  .payment-method-box {
    background: #f0f0f0;
    border: 1px solid #000;
    border-radius: 12px;
    padding: 40px;
    max-width: 850px;
    width: 100%;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  .payment-method-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 30px;
  }

  .payment-method-logo img {
    width: 62px;
    height: 62px;
    object-fit: contain;
  }

  .payment-method-logo h2 {
    font-family: 'Odibee Sans', sans-serif;
    font-size: 48px;
    margin: 0;
    color: #000;
  }

  .payment-method-title {
    font-family: 'Odibee Sans', sans-serif;
    font-size: 40px;
    text-align: center;
    margin: 0 0 30px 0;
    color: #000;
  }

  .payment-summary {
    background: #fff;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 30px;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    font-size: 16px;
  }

  .summary-row.total {
    font-size: 24px;
    font-weight: 700;
    padding-top: 12px;
    border-top: 2px solid #e0e0e0;
    margin-top: 12px;
  }

  .payment-methods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .payment-method-card {
    background: #fff;
    border: 3px solid #e0e0e0;
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .payment-method-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-color: #2d75ca;
  }

  .payment-method-card.selected {
    border-color: #2d75ca;
    background: #e3f2fd;
  }

  .payment-method-icon {
    font-size: 48px;
    margin-bottom: 8px;
  }

  .payment-method-name {
    font-size: 18px;
    font-weight: 600;
    color: #000;
  }

  .payment-method-desc {
    font-size: 13px;
    color: #666;
  }

  .test-admin-badge {
    background: #ff9800;
    color: #fff;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 700;
  }

  .action-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .btn-back {
    padding: 14px 32px;
    background: #fff;
    color: #000;
    border: 2px solid #000;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-back:hover {
    background: #f5f5f5;
  }

  .btn-pay {
    padding: 14px 32px;
    background: #28a745;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-pay:hover {
    background: #218838;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
  }

  .btn-pay:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @media (max-width: 768px) {
    .payment-methods-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .action-buttons {
      flex-direction: column;
    }

    .payment-method-logo h2 {
      font-size: 36px;
    }

    .payment-method-title {
      font-size: 32px;
    }
  }
</style>

<main class="payment-method-container">
  <div class="payment-method-box">
    <div class="payment-method-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy"/>
      <h2>Pluvia Academy</h2>
    </div>

    <h1 class="payment-method-title">Pilih Metode Pembayaran</h1>

    <div class="payment-summary">
      <div class="summary-row">
        <span>Paket:</span>
        <strong>{{paymentData.packageName}}</strong>
      </div>
      <div class="summary-row">
        <span>Harga Asli:</span>
        <span>Rp{{formatPrice paymentData.originalPrice}}</span>
      </div>
      {{#if paymentData.discountPercentage}}
      <div class="summary-row" style="color: #28a745;">
        <span>Diskon ({{paymentData.discountPercentage}}%):</span>
        <span>- Rp{{formatPrice paymentData.discountAmount}}</span>
      </div>
      {{/if}}
      <div class="summary-row total">
        <span>Total Bayar:</span>
        <span>Rp{{formatPrice paymentData.finalPrice}}</span>
      </div>
    </div>

    <form id="paymentMethodForm" method="POST" action="/payment/confirm">
      <input type="hidden" name="package_id" value="{{paymentData.packageId}}"/>
      <input type="hidden" name="account_number" value="{{paymentData.accountNumber}}"/>
      <input type="hidden" name="discount_code" value="{{paymentData.discountCode}}"/>
      <input type="hidden" name="discount_percentage" value="{{paymentData.discountPercentage}}"/>
      <input type="hidden" name="original_price" value="{{paymentData.originalPrice}}"/>
      <input type="hidden" name="final_price" value="{{paymentData.finalPrice}}"/>
      <input type="hidden" id="selectedMethod" name="payment_method" value=""/>

      <div class="payment-methods-grid">
        <div class="payment-method-card" onclick="selectMethod('gopay', this)">
          <div class="payment-method-icon">üí≥</div>
          <div class="payment-method-name">GoPay</div>
          <div class="payment-method-desc">E-Wallet</div>
        </div>

        <div class="payment-method-card" onclick="selectMethod('ovo', this)">
          <div class="payment-method-icon">üí∞</div>
          <div class="payment-method-name">OVO</div>
          <div class="payment-method-desc">E-Wallet</div>
        </div>

        <div class="payment-method-card" onclick="selectMethod('dana', this)">
          <div class="payment-method-icon">üíµ</div>
          <div class="payment-method-name">DANA</div>
          <div class="payment-method-desc">E-Wallet</div>
        </div>

        <div class="payment-method-card" onclick="selectMethod('brimo', this)">
          <div class="payment-method-icon">üè¶</div>
          <div class="payment-method-name">BRIMO</div>
          <div class="payment-method-desc">Mobile Banking BRI</div>
        </div>

        <div class="payment-method-card" onclick="selectMethod('bank', this)">
          <div class="payment-method-icon">üèß</div>
          <div class="payment-method-name">Bank Lain</div>
          <div class="payment-method-desc">Transfer Bank</div>
        </div>

        <div class="payment-method-card" onclick="selectMethod('test_admin', this)">
          <div class="payment-method-icon">üîß</div>
          <div class="payment-method-name">Test Admin</div>
          <div class="test-admin-badge">BYPASS</div>
          <div class="payment-method-desc">Untuk Testing/Demo</div>
        </div>
      </div>

      <div class="action-buttons">
        <button type="button" class="btn-back" onclick="history.back()">Kembali</button>
        <button type="submit" class="btn-pay" id="btnPay" disabled>Bayar Sekarang</button>
      </div>
    </form>
  </div>
</main>

<script>
let selectedPaymentMethod = null;

function selectMethod(method, element) {
  // Remove selection from all cards
  document.querySelectorAll('.payment-method-card').forEach(card => {
    card.classList.remove('selected');
  });

  // Add selection to clicked card
  element.classList.add('selected');
  selectedPaymentMethod = method;

  // Update hidden input and enable button
  document.getElementById('selectedMethod').value = method;
  document.getElementById('btnPay').disabled = false;
}

// Handle form submission
document.getElementById('paymentMethodForm').addEventListener('submit', function(e) {
  if (!selectedPaymentMethod) {
    e.preventDefault();
    alert('Pilih metode pembayaran terlebih dahulu');
    return false;
  }

  // Special handling for test_admin
  if (selectedPaymentMethod === 'test_admin') {
    if (!confirm('‚ö†Ô∏è Mode Test Admin\n\nAnda akan bypass pembayaran dan langsung terdaftar di paket ini.\n\nLanjutkan?')) {
      e.preventDefault();
      return false;
    }
  }
});
</script>

