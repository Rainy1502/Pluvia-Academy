<script src="/js/punishment-utils.js"></script>
<script>
// Set current user untuk punishment check
window.currentUser = {
  id: '{{user.id}}'
};

// Mark attendance otomatis ketika join live class
async function markAttendanceAndJoin(event, courseId) {
  try {
    // Call auto-attendance endpoint
    const response = await fetch(`/api/attendance/attendance/auto-join/${courseId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    const result = await response.json();

    if (result.success) {
      if (result.status === 'marked_present') {
        // Show success notification
        const notification = document.createElement('div');
        notification.style.cssText = `
          position: fixed;
          top: 20px;
          right: 20px;
          background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
          color: white;
          padding: 16px 24px;
          border-radius: 12px;
          box-shadow: 0 4px 20px rgba(72, 187, 120, 0.4);
          z-index: 9999;
          font-weight: 600;
          animation: slideIn 0.3s ease;
        `;
        notification.innerHTML = '‚úÖ Kehadiran Anda berhasil tercatat!';
        document.body.appendChild(notification);
        
        setTimeout(() => {
          notification.style.animation = 'slideOut 0.3s ease';
          setTimeout(() => notification.remove(), 300);
        }, 3000);
      } else if (result.status === 'already_marked') {
        console.log('‚úì Kehadiran sudah tercatat sebelumnya');
      }
    } else {
      // Show warning if time expired or other error
      if (result.status === 'time_expired') {
        const notification = document.createElement('div');
        notification.style.cssText = `
          position: fixed;
          top: 20px;
          right: 20px;
          background: linear-gradient(135deg, #f6ad55 0%, #ed8936 100%);
          color: white;
          padding: 16px 24px;
          border-radius: 12px;
          box-shadow: 0 4px 20px rgba(246, 173, 85, 0.4);
          z-index: 9999;
          font-weight: 600;
        `;
        notification.innerHTML = '‚ö†Ô∏è Batas waktu absensi otomatis telah berakhir';
        document.body.appendChild(notification);
        
        setTimeout(() => notification.remove(), 4000);
      } else {
        console.warn('‚ö†Ô∏è Gagal mencatat kehadiran:', result.error);
      }
    }
  } catch (error) {
    console.error('‚ùå Error saat mencatat kehadiran:', error);
  }
}

// Initialize punishment check
{{#if course}}
document.addEventListener('DOMContentLoaded', function() {
  displayPunishmentBanner('{{course.id}}');
  
  // Check if suspended, disable buttons
  checkPunishmentStatus('{{course.id}}').then(result => {
    if (result.status === 'suspended') {
      // Disable action buttons
      const joinBtn = document.querySelector('.btn-join');
      const materiBtn = document.querySelector('.btn-materi');
      
      if (joinBtn) {
        joinBtn.style.opacity = '0.5';
        joinBtn.style.pointerEvents = 'none';
        joinBtn.style.cursor = 'not-allowed';
      }
      
      if (materiBtn) {
        materiBtn.style.opacity = '0.5';
        materiBtn.style.pointerEvents = 'none';
        materiBtn.style.cursor = 'not-allowed';
      }
    }
  });
});
{{/if}}
