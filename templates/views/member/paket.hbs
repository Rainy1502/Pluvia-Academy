<style>
  .paket-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
    margin-top: 30px;
    justify-items: center;
  }

  /* Center single card */
  .paket-grid:has(> :only-child) {
    grid-template-columns: minmax(320px, 400px);
    justify-content: center;
  }

  .paket-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .paket-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
  }

  .paket-thumbnail {
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .paket-thumbnail img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .paket-card:hover .paket-thumbnail img {
    transform: scale(1.05);
  }

  .paket-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .paket-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .paket-duration {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #718096;
    font-size: 0.95rem;
    margin-bottom: 16px;
  }

  .paket-duration::before {
    content: '⏱️';
    font-size: 1.1rem;
  }

  .paket-price-section {
    margin-top: auto;
    padding-top: 16px;
    border-top: 2px solid #e2e8f0;
  }

  .paket-price {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
  }

  .btn-detail-paket {
    display: block;
    padding: 14px 24px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    text-decoration: none;
    text-align: center;
    border-radius: 10px;
    font-weight: 700;
    font-size: 1.05rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    position: relative;
    overflow: hidden;
  }

  .btn-detail-paket::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .btn-detail-paket:hover::before {
    width: 300px;
    height: 300px;
  }

  .btn-detail-paket:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    color: #fff;
  }

  .paket-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: #fff;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(245, 87, 108, 0.3);
    z-index: 1;
  }

  .page-title-paket {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 10px;
    margin-top: -20px;
  }

  .page-subtitle-paket {
    text-align: center;
    color: #718096;
    font-size: 1.05rem;
    margin-bottom: 40px;
  }
</style>

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <!-- Page Title -->
        <h2 class="page-title-paket">Paket Kursus</h2>
        <p class="page-subtitle-paket">Pilih paket pembelajaran terbaik untuk Anda</p>

        {{#if packages.length}}
        <div class="paket-grid">
          {{#each packages}}
          <div class="paket-card">
            <div class="paket-thumbnail">
              {{#if this.thumbnail}}
              <img src="{{this.thumbnail}}" alt="{{this.title}}" loading="lazy"/>
              {{else}}
              <img src="/img/banner.png" alt="{{this.title}}" loading="lazy"/>
              {{/if}}
              <span class="paket-badge">Paket Premium</span>
            </div>
            <div class="paket-content">
              <h3 class="paket-title">{{this.title}}</h3>
              {{#if this.duration}}
              <p class="paket-duration">{{this.duration}}</p>
              {{/if}}
              <div class="paket-price-section">
                <div class="paket-price">{{formatPrice this.price}}</div>
                <a href="/paket_kursus/{{this.id}}" class="btn-detail-paket">Lihat Detail</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="empty-courses empty-centered">
          <p class="empty-message">Belum ada paket kursus yang ditambahkan.</p>
          <p class="empty-sub">Silakan cek kembali nanti atau hubungi administrator untuk menambahkan.</p>
          <a href="/" class="btn-primary empty-cta">Home</a>
        </div>
        {{/if}}
      </div>
    </div>
  </section>
</main>

{{> footer}}
