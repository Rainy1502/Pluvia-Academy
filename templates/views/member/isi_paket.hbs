<style>
  .paket-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .paket-detail-card {
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .paket-detail-header {
    position: relative;
    width: 100%;
    padding-top: 40%; /* aspect ratio for header image */
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .paket-detail-header img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .paket-detail-badge {
    position: absolute;
    top: 24px;
    left: 24px;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: #fff;
    padding: 10px 20px;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(245, 87, 108, 0.4);
    z-index: 1;
  }

  .paket-detail-body {
    padding: 48px;
  }

  .paket-detail-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 24px;
    line-height: 1.3;
  }

  .paket-detail-description {
    color: #4a5568;
    font-size: 1.15rem;
    line-height: 1.8;
    margin-bottom: 40px;
    text-align: justify;
  }

  .paket-detail-actions {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  .btn-register-paket {
    padding: 16px 48px;
    font-size: 1.15rem;
    font-weight: 700;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
    position: relative;
    overflow: hidden;
  }

  .btn-register-paket::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .btn-register-paket:hover::before {
    width: 400px;
    height: 400px;
  }

  .btn-register-paket:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.5);
  }

  .btn-register-paket:active {
    transform: translateY(-1px);
  }

  .enrolled-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    border: 2px solid #28a745;
    border-radius: 12px;
    color: #155724;
    font-weight: 700;
    font-size: 1.05rem;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.2);
  }

  .enrolled-badge::before {
    content: '✓';
    font-size: 1.4rem;
    color: #28a745;
  }

  .btn-back-detail {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: #fff;
    color: #007bff;
    border: 2px solid #007bff;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 123, 255, 0.1);
    margin-bottom: 30px;
  }

  .btn-back-detail:hover {
    background: #007bff;
    color: #fff;
    transform: translateX(-5px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
  }

  .btn-back-detail::before {
    content: '←';
    font-size: 1.2rem;
    font-weight: bold;
  }

  .paket-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
    padding: 24px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
  }

  .paket-info-item {
    text-align: center;
    padding: 16px;
  }

  .paket-info-icon {
    font-size: 2rem;
    margin-bottom: 8px;
  }

  .paket-info-label {
    color: #718096;
    font-size: 0.85rem;
    margin-bottom: 4px;
  }

  .paket-info-value {
    color: #1a202c;
    font-size: 1.1rem;
    font-weight: 700;
  }
</style>

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <a href="/paket_kursus" class="btn-back-detail">Kembali ke Paket Kursus</a>
        
        <div class="paket-detail-card">
          <!-- Header Image -->
          <div class="paket-detail-header">
            {{#if package.thumbnail}}
            <img src="{{package.thumbnail}}" alt="{{package.title}}" loading="lazy"/>
            {{/if}}
            <span class="paket-detail-badge">Paket Premium</span>
          </div>

          <!-- Body Content -->
          <div class="paket-detail-body">
            <h1 class="paket-detail-title">{{package.title}}</h1>
            
            {{#if package.description}}
            <div class="paket-detail-description">
              {{package.description}}
            </div>
            {{/if}}

            <!-- Action Button -->
            <div class="paket-detail-actions">
              {{#if isEnrolled}}
              <div class="enrolled-badge">
                Anda sudah terdaftar di paket ini
              </div>
              {{else}}
              <a href="/pembayaran/{{package.id}}" class="btn-register-paket" style="display: inline-block; text-decoration: none; text-align: center;">
                Daftar Sekarang
              </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

