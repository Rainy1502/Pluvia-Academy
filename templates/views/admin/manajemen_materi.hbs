function deleteCourse(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus kursus "${title}"?\n\nPeringatan: Semua materi di kursus ini juga akan terhapus!`)) {
    fetch(`/kursus/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      window.location.reload();
    });
  }
}

function deleteMaterialFromManage(id, title) {
  deleteMateriTarget = { id, title };
  document.getElementById('deleteMateriMessage').textContent = `Apakah Anda yakin ingin menghapus materi "${title}"?`;
  document.getElementById('deleteMateriModal').style.display = 'flex';
}

function closeDeleteMateriModal() {
  document.getElementById('deleteMateriModal').style.display = 'none';
  deleteMateriTarget = { id: null, title: null };
}

function confirmDeleteMateri() {
  if (!deleteMateriTarget.id) return;
  
  fetch(`/materi/${deleteMateriTarget.id}`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      console.error('Failed to delete material');
      window.location.reload();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    window.location.reload();
  })
  .finally(() => {
    closeDeleteMateriModal();
  });
}

function deleteAllMaterials() {
  if (!currentCourseId) return;
  
  const course = coursesData.find(c => c.id === currentCourseId);
  const materials = course ? course.materials : [];
  
  if (materials.length === 0) return;
  
  document.getElementById('deleteAllMateriMessage').textContent = 
    `Apakah Anda yakin ingin menghapus SEMUA materi (${materials.length} materi) dari kursus ini?\n\nPeringatan: Tindakan ini tidak dapat dibatalkan!`;
  document.getElementById('deleteAllMateriModal').style.display = 'flex';
}

function closeDeleteAllMateriModal() {
  document.getElementById('deleteAllMateriModal').style.display = 'none';
}

function confirmDeleteAllMateri() {
  if (!currentCourseId) return;
  
  const course = coursesData.find(c => c.id === currentCourseId);
  const materials = course ? course.materials : [];
  
  if (materials.length === 0) return;
  
  const deletePromises = materials.map(material => 
    fetch(`/materi/${material.id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
  );
  
  Promise.all(deletePromises)
    .then(responses => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
      window.location.reload();
    })
    .finally(() => {
      closeDeleteAllMateriModal();
    });
}

