{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <div class="management-header">
          <h2 class="management-title">üé´ Kelola Kode Promo</h2>
          <p class="management-subtitle">Kelola kode promo untuk diskon pembelian paket kursus</p>
        </div>

        <div class="add-button-wrapper">
          <a href="/paket_kursus" class="add-button btn-back">
            <span>‚Üê</span>
            <span>Kembali</span>
          </a>
          <button class="add-button" onclick="openAddModal()">
            <span>‚äï</span>
            <span>Tambah Kode Promo</span>
          </button>
        </div>

        <div class="promo-table-wrapper">
          {{#if promoCodes.length}}
            <table class="promo-table">
        <thead>
          <tr>
            <th>Kode</th>
            <th>Paket</th>
            <th>Diskon</th>
            <th>Deskripsi</th>
            <th>Penggunaan</th>
            <th>Berlaku Hingga</th>
            <th>Status</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          {{#each promoCodes}}
          <tr>
            <td><span class="promo-code">{{this.code}}</span></td>
            <td>
              {{#if this.packages}}
                {{this.packages.title}}
              {{else}}
                <span style="color: #28a745; font-weight: 600;">‚ú® Semua Paket</span>
              {{/if}}
            </td>
            <td><span class="discount-badge">-{{this.discount_percentage}}%</span></td>
            <td>{{this.description}}</td>
            <td>
              <span class="usage-info">
                {{this.current_users}}{{#if this.max_users}} / {{this.max_users}}{{else}} / ‚àû{{/if}}
              </span>
            </td>
            <td>
              {{#if this.valid_until}}
                {{formatDate this.valid_until}}
              {{else}}
                <span style="color: #28a745;">Tidak ada batas</span>
              {{/if}}
            </td>
            <td>
              <span class="status-badge {{#if this.is_active}}active{{else}}inactive{{/if}}">
                {{#if this.is_active}}Aktif{{else}}Nonaktif{{/if}}
              </span>
            </td>
            <td>
              <div class="action-buttons">
                <button class="btn-action btn-edit" onclick="editPromo({{json this}})">Edit</button>
                <button class="btn-action btn-toggle" onclick="togglePromo('{{this.id}}', {{this.is_active}})">
                  {{#if this.is_active}}Nonaktifkan{{else}}Aktifkan{{/if}}
                </button>
                <button class="btn-action btn-delete" onclick="deletePromo('{{this.id}}', '{{this.code}}')">Hapus</button>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="empty-state">
        <h3>üé´ Belum Ada Kode Promo</h3>
        <p>Mulai tambahkan kode promo untuk platform Anda</p>
        <button class="empty-cta" onclick="openAddModal()">Tambah Kode Promo Pertama</button>
      </div>
    {{/if}}
        </div>
      </div>
    </div>
  </section>
</main>

<!-- Modal Add/Edit Promo -->
<div id="promoModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2 id="modalTitle">‚ú® Tambah Kode Promo</h2>
      <span class="close" onclick="closeModal()">&times;</span>
    </div>
    <form id="promoForm" onsubmit="submitPromo(event)">
      <input type="hidden" id="promoId" name="id">
      
      <div class="form-section">
        <div class="form-section-title">üìù Informasi Dasar</div>
        
        <div class="form-group">
          <label for="code">Kode Promo <span class="required">*</span></label>
          <input type="text" id="code" name="code" required placeholder="Contoh: WELCOME2024" style="text-transform: uppercase; font-weight: 600; letter-spacing: 1px;">
          <small>Kode unik yang akan dimasukkan member saat pembayaran. Gunakan huruf kapital dan angka tanpa spasi (contoh: DISKON50, PROMO2024)</small>
        </div>

        <div class="form-group">
          <label for="package_id">Paket Kursus</label>
          <select id="package_id" name="package_id" style="font-weight: 500;">
            <option value="" selected>‚ú® Semua Paket (All Packages)</option>
            {{#each packages}}
              <option value="{{this.id}}">{{this.title}}</option>
            {{/each}}
          </select>
          <small>Tentukan paket mana yang bisa menggunakan kode promo ini. Pilih "Semua Paket" agar berlaku untuk semua paket kursus, atau pilih paket spesifik untuk membatasi penggunaan</small>
        </div>

        <div class="form-group">
          <label for="description">Deskripsi</label>
          <textarea id="description" name="description" rows="3" placeholder="Contoh: Promo spesial untuk member baru di bulan Desember..."></textarea>
          <small>Jelaskan tujuan kode promo ini, kapan digunakan, atau informasi tambahan lainnya (opsional)</small>
        </div>
      </div>

      <div class="form-section">
        <div class="form-section-title">üí∞ Pengaturan Diskon</div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="discount_percentage">Persentase Diskon <span class="required">*</span></label>
            <input type="number" id="discount_percentage" name="discount_percentage" required min="1" max="100" placeholder="Contoh: 25">
            <small>Masukkan nilai diskon dalam persen (1-100%). Contoh: isi 25 untuk diskon 25%</small>
          </div>

          <div class="form-group">
            <label for="max_users">Batas Pengguna</label>
            <input type="number" id="max_users" name="max_users" min="1" placeholder="Contoh: 100">
            <small>Batasi berapa banyak member yang bisa menggunakan kode ini. Kosongkan jika ingin unlimited (tidak terbatas)</small>
          </div>
        </div>
      </div>

      <div class="form-section">
        <div class="form-section-title">üìÖ Periode Berlaku</div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="valid_from">Mulai Berlaku</label>
            <input type="datetime-local" id="valid_from" name="valid_from">
            <small>Tentukan kapan kode promo mulai bisa digunakan. Kosongkan jika ingin langsung aktif mulai sekarang</small>
          </div>

          <div class="form-group">
            <label for="valid_until">Berakhir Pada <span class="required">*</span></label>
            <input type="datetime-local" id="valid_until" name="valid_until" required>
            <small>Tanggal dan waktu berakhirnya kode promo (wajib diisi). Setelah tanggal ini, kode tidak bisa digunakan lagi</small>
          </div>
        </div>
      </div>

      <button type="submit" class="btn-submit">üíæ Simpan Kode Promo</button>
    </form>
  </div>
</div>

<script>
function openAddModal() {
  document.getElementById('modalTitle').textContent = '‚ú® Tambah Kode Promo';
  document.getElementById('promoForm').reset();
  document.getElementById('promoId').value = '';
  document.getElementById('package_id').value = '';
  document.querySelector('.btn-submit').textContent = 'üíæ Simpan Kode Promo';
  document.getElementById('promoModal').style.display = 'block';
}

function editPromo(promo) {
  document.getElementById('modalTitle').textContent = '‚úèÔ∏è Edit Kode Promo';
  document.getElementById('promoId').value = promo.id;
  document.getElementById('code').value = promo.code;
  document.getElementById('package_id').value = promo.package_id || '';
  document.getElementById('discount_percentage').value = promo.discount_percentage;
  document.getElementById('max_users').value = promo.max_users || '';
  document.getElementById('description').value = promo.description || '';
  
  if (promo.valid_from) {
    document.getElementById('valid_from').value = new Date(promo.valid_from).toISOString().slice(0, 16);
  }
  if (promo.valid_until) {
    document.getElementById('valid_until').value = new Date(promo.valid_until).toISOString().slice(0, 16);
  }
  
  document.querySelector('.btn-submit').textContent = 'üíæ Update Kode Promo';
  document.getElementById('promoModal').style.display = 'block';
}

function closeModal() {
  document.getElementById('promoModal').style.display = 'none';
}

function submitPromo(event) {
  event.preventDefault();
  const formData = new FormData(event.target);
  const data = Object.fromEntries(formData.entries());
  
  const id = document.getElementById('promoId').value;
  const url = id ? `/admin/promo-codes/${id}` : '/admin/promo-codes';
  const method = id ? 'PUT' : 'POST';
  
  fetch(url, {
    method: method,
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data)
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      alert(id ? 'Kode promo berhasil diupdate!' : 'Kode promo berhasil ditambahkan!');
      window.location.reload();
    } else {
      alert('Error: ' + (result.message || 'Gagal menyimpan kode promo'));
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Terjadi kesalahan saat menyimpan kode promo');
  });
}

function togglePromo(id, currentStatus) {
  const newStatus = !currentStatus;
  fetch(`/admin/promo-codes/${id}/toggle`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ is_active: newStatus })
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      window.location.reload();
    } else {
      alert('Error: ' + (result.message || 'Gagal mengubah status'));
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Terjadi kesalahan');
  });
}

function deletePromo(id, code) {
  if (confirm(`Apakah Anda yakin ingin menghapus kode promo "${code}"?`)) {
    fetch(`/admin/promo-codes/${id}`, {
      method: 'DELETE'
    })
    .then(response => response.json())
    .then(result => {
      if (result.success) {
        alert('Kode promo berhasil dihapus!');
        window.location.reload();
      } else {
        alert('Error: ' + (result.message || 'Gagal menghapus kode promo'));
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan');
    });
  }
}

// Close modal when clicking outside
window.onclick = function(event) {
  const modal = document.getElementById('promoModal');
  if (event.target == modal) {
    closeModal();
  }
}
</script>

