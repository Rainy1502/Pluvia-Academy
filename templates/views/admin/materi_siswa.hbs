{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        {{#if isAdmin}}
          <!-- Admin View - Manajemen Materi -->
          <div class="materi-admin-container">
            <div class="materi-header">
              <h2 class="materi-admin-title">Manajemen Materi</h2>
              <button class="materi-tambah-btn" onclick="openTambahMateriModal()">
                <span class="plus-icon">‚äï</span> Tambah Data
              </button>
            </div>

          {{#if courses.length}}
          <div class="materi-card">
            {{#each courses}}
            <div class="materi-item">
              <div class="materi-info">
                <div class="materi-icon"></div>
                <div class="materi-content">
                  <h3 class="materi-title">{{this.title}}</h3>
                </div>
              </div>
              <div class="materi-actions">
                <button class="materi-btn materi-btn-tambah" onclick="openTambahMateriModal('{{this.id}}', '{{this.title}}')">Tambah</button>
                <button class="materi-btn materi-btn-edit" onclick="openManageMateriModal('{{this.id}}', '{{this.title}}')">Edit</button>
                <button class="materi-btn materi-btn-hapus" onclick="deleteCourse('{{this.id}}', '{{this.title}}')">Hapus</button>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada kursus terdaftar</p>
            <p class="empty-sub">Tambahkan kursus terlebih dahulu di menu Manajemen Kursus</p>
          </div>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </section>
</main>

<!-- Modal Tambah Materi -->
<div id="tambahMateriModal" class="kursus-modal">
  <div class="kursus-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Tambah Materi - <span id="courseNameDisplay"></span></h3>
    
    <form id="tambahMateriForm" method="POST" action="/materi/create">
      <input type="hidden" name="course_id" id="tambahCourseId"/>
      
      <input type="text" name="title" placeholder="Nama Materi" required class="modal-input"/>
      
      <input type="text" name="description" placeholder="Deskripsi" class="modal-input"/>
      
      <input type="number" name="ordinal" placeholder="Urutan" required class="modal-input"/>
      
      <div class="file-input-wrapper">
        <input type="file" id="materiThumbnailInput" accept="image/*" class="modal-file-input"/>
        <label for="materiThumbnailInput" class="file-input-label">
          <span>Pilih Gambar</span>
          <span class="file-icon">üñºÔ∏è</span>
        </label>
      </div>
      <input type="hidden" name="thumbnail" id="materiThumbnailUrl"/>
      
      <div class="modal-actions">
        <button type="submit" class="modal-btn modal-btn-tambah">Tambah</button>
        <button type="button" class="modal-btn modal-btn-batal" onclick="closeTambahMateriModal()">Batal</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal Manage Materi (List of Materials) -->
<div id="manageMateriModal" class="kursus-modal">
  <div class="kursus-modal-content modal-manage-materi">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Kelola Materi - <span id="manageCourseNameDisplay"></span></h3>
    
    <div id="materiListContainer" class="materi-list-container">
      <!-- Materials will be loaded here dynamically -->
    </div>
    
    <div class="modal-actions">
      <button type="button" class="modal-btn modal-btn-batal" onclick="closeManageMateriModal()">Tutup</button>
    </div>
  </div>
</div>

<!-- Modal Edit Materi -->
<div id="editMateriModal" class="kursus-modal">
  <div class="kursus-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Edit Materi</h3>
    
    <form id="editMateriForm" method="POST">
      <input type="text" name="title" id="editMateriTitle" placeholder="Nama Materi" required class="modal-input"/>
      
      <input type="text" name="description" id="editMateriDescription" placeholder="Deskripsi" class="modal-input"/>
      
      <input type="number" name="ordinal" id="editMateriOrdinal" placeholder="Urutan" required class="modal-input"/>
      
      <div class="file-input-wrapper">
        <input type="file" id="editMateriThumbnailInput" accept="image/*" class="modal-file-input"/>
        <label for="editMateriThumbnailInput" class="file-input-label">
          <span>Pilih Gambar</span>
          <span class="file-icon">üñºÔ∏è</span>
        </label>
      </div>
      <input type="hidden" name="thumbnail" id="editMateriThumbnailUrl"/>
      
      <div class="modal-actions">
        <button type="submit" class="modal-btn modal-btn-edit">Edit</button>
        <button type="button" class="modal-btn modal-btn-batal" onclick="closeEditMateriModal()">Batal</button>
      </div>
    </form>
  </div>
</div>

<script>
// Store courses data for managing materials
const coursesData = {{{json courses}}};

function openTambahMateriModal(courseId, courseName) {
  document.getElementById('tambahCourseId').value = courseId;
  document.getElementById('courseNameDisplay').textContent = courseName;
  document.getElementById('tambahMateriModal').style.display = 'flex';
}

function closeTambahMateriModal() {
  document.getElementById('tambahMateriModal').style.display = 'none';
  document.getElementById('tambahMateriForm').reset();
}

function openManageMateriModal(courseId, courseName) {
  document.getElementById('manageCourseNameDisplay').textContent = courseName;
  
  // Find course materials
  const course = coursesData.find(c => c.id === courseId);
  const materials = course ? course.materials : [];
  
  // Build materials list HTML
  let html = '';
  if (materials.length === 0) {
    html = '<p style="text-align:center; color:#666; padding:20px;">Belum ada materi untuk kursus ini</p>';
  } else {
    html = '<div class="manage-materi-list">';
    materials.forEach(material => {
      html += `
        <div class="manage-materi-item">
          <div class="manage-materi-info">
            <h4>${material.title}</h4>
            ${material.description ? `<p>${material.description}</p>` : ''}
          </div>
          <div class="manage-materi-actions">
            <button class="modal-btn-small modal-btn-siswa" onclick="window.location.href='/materi/${material.id}/students'">Siswa</button>
            <button class="modal-btn-small modal-btn-edit" onclick="openEditMateriModal('${material.id}', '${material.title}', '${material.description || ''}', '${material.thumbnail || ''}', '${material.ordinal}')">Edit</button>
            <button class="modal-btn-small modal-btn-hapus" onclick="deleteMaterialFromManage('${material.id}', '${material.title}')">Hapus</button>
          </div>
        </div>
      `;
    });
    html += '</div>';
  }
  
  document.getElementById('materiListContainer').innerHTML = html;
  document.getElementById('manageMateriModal').style.display = 'flex';
}

function closeManageMateriModal() {
  document.getElementById('manageMateriModal').style.display = 'none';
}

function openEditMateriModal(id, title, description, thumbnail, ordinal) {
  // Close manage modal first
  closeManageMateriModal();
  
  document.getElementById('editMateriTitle').value = title || '';
  document.getElementById('editMateriDescription').value = description || '';
  document.getElementById('editMateriOrdinal').value = ordinal || '';
  document.getElementById('editMateriThumbnailUrl').value = thumbnail || '';
  document.getElementById('editMateriForm').action = `/materi/${id}/edit`;
  document.getElementById('editMateriModal').style.display = 'flex';
}

function closeEditMateriModal() {
  document.getElementById('editMateriModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const tambahModal = document.getElementById('tambahMateriModal');
  const manageModal = document.getElementById('manageMateriModal');
  const editModal = document.getElementById('editMateriModal');
  
  if (event.target === tambahModal) {
    closeTambahMateriModal();
  }
  if (event.target === manageModal) {
    closeManageMateriModal();
  }
  if (event.target === editModal) {
    closeEditMateriModal();
  }
}

function deleteCourse(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus kursus "${title}"?\n\nPeringatan: Semua materi di kursus ini juga akan terhapus!`)) {
    fetch(`/kursus/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Kursus berhasil dihapus');
        window.location.reload();
      } else {
        alert('Gagal menghapus kursus');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat menghapus kursus');
    });
  }
}

function deleteMaterialFromManage(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus materi "${title}"?`)) {
    fetch(`/materi/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Materi berhasil dihapus');
        window.location.reload();
      } else {
        alert('Gagal menghapus materi');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat menghapus materi');
    });
  }
}
</script>

