<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        
        <div class="management-header">
          <h1 class="management-title">üë• Daftar Siswa</h1>
          <p class="management-subtitle">{{courseName}}</p>
          {{#if students.length}}
          <p class="students-count">Total: {{students.length}} siswa terdaftar</p>
          {{/if}}
        </div>

        <div class="add-button-wrapper">
          <a href="/kursus" class="add-button">Kembali ke Manajemen Kursus</a>
        </div>

        {{#if students.length}}
        <div class="students-table-wrapper">
          <div class="students-grid">
            {{#each students}}
            <div class="student-card">
              <div class="student-info-section">
                <div class="student-avatar">üë§</div>
                <span class="student-name">{{this.full_name}}</span>
              </div>
              <div class="student-actions-section">
                <button class="btn-student-action btn-access" onclick="window.location.href='/kursus/{{../courseId}}/students/{{this.id}}/materi'">üìö Akses Materi</button>
                <button class="btn-student-action btn-remove" onclick="removeStudent('{{../courseId}}', '{{this.id}}', '{{this.full_name}}')">üö´ Keluarkan</button>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{else}}
        <div class="empty-state">
          <h3>üë• Belum Ada Siswa</h3>
          <p>Siswa akan muncul di sini setelah mendaftar ke kursus ini</p>
        </div>
        {{/if}}
      </div>
    </div>
  </section>
</main>

<!-- Modal Konfirmasi Keluarkan Siswa -->
<div id="removeStudentModal" class="kursus-modal">
  <div class="logout-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Konfirmasi Keluarkan Siswa</h3>
    <p class="logout-message" id="removeStudentMessage">Apakah Anda yakin ingin mengeluarkan siswa ini dari kursus?</p>
    
    <div class="modal-actions">
      <button type="button" class="modal-btn modal-btn-logout" onclick="confirmRemoveStudent()">Ya, Keluarkan</button>
      <button type="button" class="modal-btn modal-btn-batal" onclick="closeRemoveModal()">Batal</button>
    </div>
  </div>
</div>

<script>
let studentToRemove = null;

function removeStudent(courseId, studentId, studentName) {
  studentToRemove = { courseId, studentId, studentName };
  document.getElementById('removeStudentMessage').textContent = 
    `Apakah Anda yakin ingin mengeluarkan ${studentName} dari kursus ini? Siswa akan kehilangan akses ke semua materi kursus.`;
  document.getElementById('removeStudentModal').style.display = 'block';
}

function closeRemoveModal() {
  document.getElementById('removeStudentModal').style.display = 'none';
  studentToRemove = null;
}

function confirmRemoveStudent() {
  if (!studentToRemove) return;
  
  const { courseId, studentId } = studentToRemove;
  
  fetch(`/kursus/${courseId}/students/${studentId}/remove`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(response => response.json())
  .then(result => {
    if (result.success) {
      closeRemoveModal();
      if (typeof toast !== 'undefined') {
        toast.success('Siswa berhasil dikeluarkan dari kursus');
      }
      setTimeout(() => {
        window.location.reload();
      }, 1500);
    } else {
      alert('Error: ' + (result.message || 'Gagal mengeluarkan siswa'));
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Terjadi kesalahan saat mengeluarkan siswa');
  });
}

// Close modal when clicking outside
window.onclick = function(event) {
  const modal = document.getElementById('removeStudentModal');
  if (event.target === modal) {
    closeRemoveModal();
  }
}
</script>

