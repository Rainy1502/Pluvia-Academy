{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <div class="students-admin-container">
          <h2 class="students-title">Daftar Student</h2>
          <h3 class="students-subtitle">{{courseName}}</h3>

          {{#if students.length}}
          <div class="students-card">
            {{#each students}}
            <div class="student-item">
              <div class="student-info">
                <div class="student-icon"></div>
                <span class="student-name">{{this.full_name}}</span>
              </div>
              <div class="student-actions">
                <button class="student-btn student-btn-akses" onclick="window.location.href='/kursus/{{../courseId}}/students/{{this.id}}/materi'">Akses Materi</button>
                <button class="student-btn student-btn-keluarkan" onclick="removeStudent('{{this.id}}', '{{this.full_name}}')">Keluarkan</button>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada student terdaftar</p>
            <p class="empty-sub">Student akan muncul setelah mendaftar ke kursus ini</p>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </section>
</main>

<script>
function removeStudent(studentId, studentName) {
  if (confirm(`Apakah Anda yakin ingin mengeluarkan ${studentName} dari kursus ini?`)) {
    fetch(`/kursus/{{courseId}}/students/${studentId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Student berhasil dikeluarkan');
        window.location.reload();
      } else {
        alert('Gagal mengeluarkan student');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan');
    });
  }
}
</script>

