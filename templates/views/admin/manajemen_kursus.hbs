  <div class="kursus-modal-content logout-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Konfirmasi Hapus</h3>
    <p class="logout-message" id="deleteMessage">Apakah Anda yakin ingin menghapus kursus ini?</p>
    
    <div class="modal-actions">
      <button type="button" class="modal-btn modal-btn-logout" onclick="confirmDelete()">Ya, Hapus</button>
      <button type="button" class="modal-btn modal-btn-batal" onclick="closeDeleteModal()">Batal</button>
    </div>
  </div>
</div>

<script>
let deleteTarget = { id: null, title: null };

// Upload file to server (which handles Supabase upload)
async function uploadToServer(file, folder = 'thumbnails') {
  try {
    const formData = new FormData();
    formData.append('image', file);
    formData.append('folder', folder);

    const response = await fetch('/api/upload/upload', {
      method: 'POST',
      body: formData
    });

    const result = await response.json();

    if (!result.success) {
      throw new Error(result.message || 'Upload failed');
    }

    return result.url;
  } catch (error) {
    console.error('Error uploading file:', error);
    throw error;
  }
}

// Wrap event listeners in DOMContentLoaded to ensure DOM is ready
document.addEventListener('DOMContentLoaded', function() {
  // Handle file input label change for Tambah modal
  const thumbnailInput = document.getElementById('thumbnailInput');
  if (thumbnailInput) {
    thumbnailInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Gambar';
      }
    });
  }

  // Handle file input label change for Edit modal
  const editThumbnailInput = document.getElementById('editThumbnailInput');
  if (editThumbnailInput) {
    editThumbnailInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Gambar';
      }
    });
  }

  // Handle form submission for Tambah with file upload
  const tambahKursusForm = document.getElementById('tambahKursusForm');
  if (tambahKursusForm) {
    tambahKursusForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const fileInput = document.getElementById('thumbnailInput');
      const thumbnailUrlInput = document.getElementById('thumbnailUrl');
      const submitBtn = this.querySelector('button[type="submit"]');
      
      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengunggah...';
        
    // Upload file if selected
    if (fileInput.files.length > 0) {
      const publicUrl = await uploadToServer(fileInput.files[0], 'thumbnails');
      thumbnailUrlInput.value = publicUrl;
    }        // Submit form
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Tambah';
      }
    });
  }

  // Handle form submission for Edit with file upload
  const editKursusForm = document.getElementById('editKursusForm');
  if (editKursusForm) {
    editKursusForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const fileInput = document.getElementById('editThumbnailInput');
      const thumbnailUrlInput = document.getElementById('editThumbnailUrl');
      const submitBtn = this.querySelector('button[type="submit"]');
      
      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengunggah...';
        
    // Upload file if new file selected
    if (fileInput.files.length > 0) {
      const publicUrl = await uploadToServer(fileInput.files[0], 'thumbnails');
      thumbnailUrlInput.value = publicUrl;
    }        // Submit form
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Edit';
      }
    });
  }
});

function openTambahModal() {
  document.getElementById('tambahKursusModal').style.display = 'flex';
  // Reset file label
  const label = document.querySelector('#thumbnailInput + .file-input-label span:first-child');
  if (label) label.textContent = 'Pilih Gambar';
}

function closeTambahModal() {
  document.getElementById('tambahKursusModal').style.display = 'none';
}

// Helper function using data attributes
function openEditModalData(button) {
  const id = button.getAttribute('data-id');
  const title = button.getAttribute('data-title');
  const description = button.getAttribute('data-description');
  const instructorId = button.getAttribute('data-instructor-id');
  const meetLink = button.getAttribute('data-meet-link');
  const scheduleDay = button.getAttribute('data-schedule-day');
  const scheduleTimeStart = button.getAttribute('data-schedule-time-start');
  const scheduleTimeEnd = button.getAttribute('data-schedule-time-end');
  const thumbnail = button.getAttribute('data-thumbnail');
  
  openEditModal(id, title, description, instructorId, meetLink, scheduleDay, scheduleTimeStart, scheduleTimeEnd, thumbnail);
}

function openEditModal(id, title, description, instructorId, meetLink, scheduleDay, scheduleTimeStart, scheduleTimeEnd, thumbnail) {
  const modal = document.getElementById('editKursusModal');
  const form = document.getElementById('editKursusForm');
  
  console.log('Thumbnail value:', thumbnail); // Debug log
  
  form.action = `/kursus/${id}/edit`;
  document.getElementById('editTitle').value = title || '';
  document.getElementById('editDescription').value = description || '';
  document.getElementById('editInstructorId').value = instructorId || '';
  document.getElementById('editMeetLink').value = meetLink || '';
  document.getElementById('editScheduleDay').value = scheduleDay || '';
  document.getElementById('editScheduleTimeStart').value = scheduleTimeStart || '';
  document.getElementById('editScheduleTimeEnd').value = scheduleTimeEnd || '';
  document.getElementById('editThumbnailUrl').value = thumbnail || '';
  
  // Reset file label or show existing filename
  const fileLabel = document.querySelector('#editThumbnailInput + .file-input-label span:first-child');
  const fileInput = document.getElementById('editThumbnailInput');
  
  if (fileLabel && fileInput) {
    // Clear previous file selection
    fileInput.value = '';
    
    if (thumbnail && thumbnail.trim() !== '') {
      // Extract filename from URL or path
      let filename = thumbnail.split('/').pop();
      // Remove query parameters if any
      filename = filename.split('?')[0];
      // Decode URL encoding
      filename = decodeURIComponent(filename);
      
      fileLabel.textContent = filename || 'Pilih Gambar';
    } else {
      fileLabel.textContent = 'Pilih Gambar';
    }
  }
  
  modal.style.display = 'flex';
}

function closeEditModal() {
  document.getElementById('editKursusModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const tambahModal = document.getElementById('tambahKursusModal');
  const editModal = document.getElementById('editKursusModal');
  if (event.target === tambahModal) {
    closeTambahModal();
  }
  if (event.target === editModal) {
    closeEditModal();
  }
}

// Helper function using data attributes
function deleteCourseData(button) {
  const id = button.getAttribute('data-id');
  const title = button.getAttribute('data-title');
  showDeleteConfirm(id, title);
}

function showDeleteConfirm(id, title) {
  deleteTarget = { id, title };
  document.getElementById('deleteMessage').textContent = `Apakah Anda yakin ingin menghapus kursus "${title}"?`;
  document.getElementById('deleteModal').style.display = 'flex';
}

function closeDeleteModal() {
  document.getElementById('deleteModal').style.display = 'none';
  deleteTarget = { id: null, title: null };
}

function confirmDelete() {
  if (!deleteTarget.id) return;
  
  fetch(`/kursus/${deleteTarget.id}`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      console.error('Failed to delete course');
      window.location.reload();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    window.location.reload();
  })
  .finally(() => {
    closeDeleteModal();
  });
}

// Close modal when clicking outside
window.onclick = function(event) {
  const deleteModal = document.getElementById('deleteModal');
  if (event.target === deleteModal) {
    closeDeleteModal();
  }
}
</script>

