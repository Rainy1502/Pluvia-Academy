{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <!-- Admin View - Manajemen Paket -->
        <div class="paket-admin-container">
          <div class="paket-header">
            <h2 class="paket-admin-title">Manajemen Paket Kursus</h2>
            <button class="paket-tambah-btn" onclick="openTambahPaketModal()">
              <span class="plus-icon">âŠ•</span> Tambah Data
            </button>
          </div>

          {{#if packages.length}}
          <div class="paket-card">
            {{#each packages}}
            <div class="paket-item">
              <div class="paket-info">
                <div class="paket-icon"></div>
                <div class="paket-content">
                  <h3 class="paket-title">{{this.title}}</h3>
                  <p class="paket-desc">{{this.description}}</p>
                </div>
              </div>
              <div class="paket-actions">
                <button class="paket-btn paket-btn-edit" onclick="openEditPaketModal('{{this.id}}', '{{this.title}}', '{{this.description}}', '{{this.price}}', '{{this.duration}}', '{{this.material_count}}', '{{this.thumbnail}}')">Edit</button>
                <button class="paket-btn paket-btn-hapus" onclick="deletePackage('{{this.id}}', '{{this.title}}')">Hapus</button>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada paket terdaftar</p>
            <p class="empty-sub">Klik "Tambah Data" untuk menambahkan paket baru</p>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </section>
</main>

<!-- Modal Tambah Paket -->
<div id="tambahPaketModal" class="kursus-modal">
  <div class="kursus-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Tambah Paket Kursus</h3>
    
    <form id="tambahPaketForm" method="POST" action="/paket_kursus/create">
      <input type="text" name="title" placeholder="Nama Paket" required class="modal-input"/>
      
      <input type="text" name="description" placeholder="Deskripsi" required class="modal-input"/>
      
      <input type="number" name="price" placeholder="Harga" required class="modal-input"/>
      
      <input type="text" name="duration" placeholder="Durasi (contoh: 6 Bulan)" class="modal-input"/>
      
      <div class="course-selection-container">
        <div class="course-selection-box">
          <span class="course-placeholder">Pilih Kursus</span>
          <button type="button" class="add-course-btn" onclick="toggleCourseList('tambah')">âŠ•</button>
        </div>
        <div class="course-checkbox-list" id="tambahCourseList" style="display:none;">
          {{#if courses}}
            {{#if courses.length}}
              {{#each courses}}
              <label class="course-checkbox-item">
                <input type="checkbox" name="course_ids[]" value="{{this.id}}" class="course-checkbox"/>
                <span class="course-name">{{this.title}}</span>
              </label>
              {{/each}}
            {{else}}
              <p class="empty-courses-msg">Belum ada kursus tersedia</p>
            {{/if}}
          {{else}}
            <p class="empty-courses-msg">Belum ada kursus tersedia</p>
          {{/if}}
        </div>
      </div>
      
      <div class="file-input-wrapper">
        <input type="file" id="paketThumbnailInput" accept="image/*" class="modal-file-input"/>
        <label for="paketThumbnailInput" class="file-input-label">
          <span>Pilih Gambar</span>
          <span class="file-icon">ğŸ–¼ï¸</span>
        </label>
      </div>
      <input type="hidden" name="thumbnail" id="paketThumbnailUrl"/>
      
      <div class="modal-actions">
        <button type="submit" class="modal-btn modal-btn-tambah">Tambah</button>
        <button type="button" class="modal-btn modal-btn-batal" onclick="closeTambahPaketModal()">Batal</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal Edit Paket -->
<div id="editPaketModal" class="kursus-modal">
  <div class="kursus-modal-content">
    <div class="modal-logo">
      <img src="/img/logo-pngegg.png" alt="Pluvia Academy" class="modal-logo-img"/>
      <h2>Pluvia Academy</h2>
    </div>
    <h3 class="modal-title">Edit Paket Kursus</h3>
    
    <form id="editPaketForm" method="POST">
      <input type="text" name="title" id="editPaketTitle" placeholder="Nama Paket" required class="modal-input"/>
      
      <input type="text" name="description" id="editPaketDescription" placeholder="Deskripsi" required class="modal-input"/>
      
      <input type="number" name="price" id="editPaketPrice" placeholder="Harga" required class="modal-input"/>
      
      <input type="text" name="duration" id="editPaketDuration" placeholder="Durasi (contoh: 6 Bulan)" class="modal-input"/>
      
      <div class="course-selection-container">
        <div class="course-selection-box">
          <span class="course-placeholder">Pilih Kursus</span>
          <button type="button" class="add-course-btn" onclick="toggleCourseList('edit')">âŠ•</button>
        </div>
        <div class="course-checkbox-list" id="editCourseList" style="display:none;">
          {{#if courses}}
            {{#if courses.length}}
              {{#each courses}}
              <label class="course-checkbox-item">
                <input type="checkbox" name="course_ids[]" value="{{this.id}}" class="course-checkbox edit-course-checkbox"/>
                <span class="course-name">{{this.title}}</span>
              </label>
              {{/each}}
            {{else}}
              <p class="empty-courses-msg">Belum ada kursus tersedia</p>
            {{/if}}
          {{else}}
            <p class="empty-courses-msg">Belum ada kursus tersedia</p>
          {{/if}}
        </div>
      </div>
      
      <div class="file-input-wrapper">
        <input type="file" id="editPaketThumbnailInput" accept="image/*" class="modal-file-input"/>
        <label for="editPaketThumbnailInput" class="file-input-label">
          <span>Pilih Gambar</span>
          <span class="file-icon">ğŸ–¼ï¸</span>
        </label>
      </div>
      <input type="hidden" name="thumbnail" id="editPaketThumbnailUrl"/>
      
      <div class="modal-actions">
        <button type="submit" class="modal-btn modal-btn-edit">Edit</button>
        <button type="button" class="modal-btn modal-btn-batal" onclick="closeEditPaketModal()">Batal</button>
      </div>
    </form>
  </div>
</div>

<script>
function toggleCourseList(type) {
  const listId = type === 'tambah' ? 'tambahCourseList' : 'editCourseList';
  const list = document.getElementById(listId);
  list.style.display = list.style.display === 'none' ? 'block' : 'none';
}

function openTambahPaketModal() {
  document.getElementById('tambahPaketModal').style.display = 'flex';
  document.getElementById('tambahCourseList').style.display = 'none';
}

function closeTambahPaketModal() {
  document.getElementById('tambahPaketModal').style.display = 'none';
}

function openEditPaketModal(id, title, description, price, duration, material_count, thumbnail) {
  document.getElementById('editPaketTitle').value = title || '';
  document.getElementById('editPaketDescription').value = description || '';
  document.getElementById('editPaketPrice').value = price || '';
  document.getElementById('editPaketDuration').value = duration || '';
  document.getElementById('editPaketThumbnailUrl').value = thumbnail || '';
  document.getElementById('editPaketForm').action = `/paket_kursus/${id}/edit`;
  document.getElementById('editCourseList').style.display = 'none';
  document.getElementById('editPaketModal').style.display = 'flex';
}

function closeEditPaketModal() {
  document.getElementById('editPaketModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const tambahModal = document.getElementById('tambahPaketModal');
  const editModal = document.getElementById('editPaketModal');
  if (event.target === tambahModal) {
    closeTambahPaketModal();
  }
  if (event.target === editModal) {
    closeEditPaketModal();
  }
}

function deletePackage(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus paket "${title}"?`)) {
    fetch(`/paket_kursus/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Paket berhasil dihapus');
        window.location.reload();
      } else {
        alert('Gagal menghapus paket');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat menghapus paket');
    });
  }
}
</script>

