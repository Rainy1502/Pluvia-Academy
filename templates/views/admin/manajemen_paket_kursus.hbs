  .empty-message {
    font-size: 1.2rem;
    font-weight: 600;
    color: #4a5568;
    margin-bottom: 8px;
  }

  .empty-sub {
    color: #718096;
    font-size: 0.95rem;
    margin-bottom: 20px;
  }

  .empty-cta {
    background: linear-gradient(135deg, #00d4ff 0%, #007bff 100%);
    color: #fff;
    border: none;
    padding: 12px 28px;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  }

  .empty-cta:hover {
