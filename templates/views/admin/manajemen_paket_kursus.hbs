    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
  }

  .file-icon {
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .file-input-label:hover .file-icon {
    transform: scale(1.1);
  }

  .modal-actions {
    display: flex;
    gap: 12px;
    padding: 20px 30px 30px;
    justify-content: center;
  }

  .modal-btn {
    padding: 12px 30px;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 120px;
    font-family: inherit;
  }

  .modal-btn-tambah {
    background: #667eea;
    color: white;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }

  .modal-btn-tambah:hover {
    background: #5568d3;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }

  .modal-btn-batal {
    background: #dc3545;
    color: white;
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
  }

  .modal-btn-batal:hover {
    background: #c82333;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        <div class="management-header">
          <h2 class="management-title">Manajemen Paket Kursus</h2>
          <p class="management-subtitle">Kelola paket pembelajaran yang tersedia</p>
        </div>

        <div class="add-button-wrapper" style="display: flex; justify-content: center; gap: 15px; flex-wrap: wrap;">
          <button class="add-button" onclick="openTambahPaketModal()">
            <span>‚äï</span>
            <span>Tambah Paket Baru</span>
          </button>
          <button class="add-button" onclick="window.location.href='/admin/promo-codes'" style="background: linear-gradient(135deg, #a8e063 0%, #56ab2f 100%);">
            <span>üé´</span>
            <span>Kelola Kode Promo</span>
          </button>
        </div>

        {{#if packages.length}}
        <div class="course-grid">
          {{#each packages}}
          <div class="course-item-card">
            <div class="course-item-info">
              <div class="course-item-icon" style="{{#if this.thumbnail}}background-image: url('{{this.thumbnail}}');{{/if}}">{{#unless this.thumbnail}}üì¶{{/unless}}</div>
              <div class="course-item-content">
                <h3>{{this.title}}</h3>
              </div>
            </div>
            <div class="course-item-actions">
              <button class="btn-action btn-edit" 
                data-id="{{this.id}}" 
                data-title="{{this.title}}" 
                data-description="{{this.description}}" 
                data-price="{{this.price}}" 
                data-duration="{{this.duration}}" 
                data-course-ids="{{this.course_ids}}" 
                data-thumbnail="{{this.thumbnail}}"
                data-is-banner="{{this.is_banner}}"
                data-banner-image="{{this.banner_image}}"
                onclick="openEditPaketModalData(this)">
                Edit
              </button>
              <button class="btn-action btn-hapus" 
                data-id="{{this.id}}" 
                data-title="{{this.title}}"
                onclick="deletePackageData(this)">
                Hapus
              </button>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <div class="empty-courses">
          <p class="empty-message">Belum ada paket yang ditambahkan</p>
          <p class="empty-sub">Mulai tambahkan paket untuk platform Anda</p>
          <button class="empty-cta" onclick="openTambahPaketModal()">Tambah Paket Pertama</button>
        </div>
        {{/if}}
      </div>
    </div>
  </section>
</main>

