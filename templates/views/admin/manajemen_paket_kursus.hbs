<script>
let deletePaketTarget = { id: null, title: null };

// Upload file to server
async function uploadToServer(file, folder = 'packages') {
  try {
    const formData = new FormData();
    formData.append('image', file);
    formData.append('folder', folder);

    const response = await fetch('/api/upload/upload', {
      method: 'POST',
      body: formData
    });

    const result = await response.json();

    if (!result.success) {
      throw new Error(result.message || 'Upload failed');
    }

    return result.url;
  } catch (error) {
    console.error('Error uploading file:', error);
    throw error;
  }
}

// Upload file to Supabase Storage (fallback)
async function uploadToSupabase(file, folder = 'packages') {
  try {
    const fileExt = file.name.split('.').pop();
    const fileName = `${folder}/${Date.now()}-${Math.random().toString(36).substring(7)}.${fileExt}`;
    
    const { data, error } = await supabaseClient.storage
      .from('course-images')
      .upload(fileName, file, {
        cacheControl: '3600',
        upsert: false
      });

    if (error) throw error;

    // Get public URL
    const { data: { publicUrl } } = supabaseClient.storage
      .from('course-images')
      .getPublicUrl(fileName);

    return publicUrl;
  } catch (error) {
    console.error('Error uploading file:', error);
    throw error;
  }
}

// Wait for DOM to be ready
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM Loaded - Paket Kursus Page');
  
  // Handle file input label change for Tambah modal (thumbnail)
  const tambahFileInput = document.getElementById('paketThumbnailInput');
  if (tambahFileInput) {
    console.log('Thumbnail input found');
    tambahFileInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Thumbnail (Gambar Paket)';
      }
    });
  }

  // Handle file input label change for Tambah modal (banner)
  const tambahBannerInput = document.getElementById('paketBannerInput');
  if (tambahBannerInput) {
    tambahBannerInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Banner (Gambar Landscape/Wide)';
      }
    });
  }

  // Handle file input label change for Edit modal (thumbnail)
  const editFileInput = document.getElementById('editPaketThumbnailInput');
  if (editFileInput) {
    editFileInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Thumbnail (Gambar Paket)';
      }
    });
  }

  // Handle form submission for Tambah with file upload
  const tambahForm = document.getElementById('tambahPaketForm');
  console.log('Tambah form element:', tambahForm);
  
  if (tambahForm) {
    console.log('Setting up form submit listener');
    tambahForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      console.log('Form submit triggered!');
      
      const thumbnailInput = document.getElementById('paketThumbnailInput');
      const thumbnailUrlInput = document.getElementById('paketThumbnailUrl');
      const bannerInput = document.getElementById('paketBannerInput');
      const bannerUrlInput = document.getElementById('paketBannerUrl');
      const submitBtn = this.querySelector('button[type="submit"]');
      
      // Debug: Check selected courses
      const checkedCourses = document.querySelectorAll('#tambahCourseDropdown input[type="checkbox"]:checked');
      console.log('Checked courses:', checkedCourses.length);
      checkedCourses.forEach(cb => console.log('Course ID:', cb.value));
      
      // Create hidden inputs for selected courses
      const hiddenContainer = document.getElementById('tambahHiddenCourses');
      hiddenContainer.innerHTML = ''; // Clear previous
      checkedCourses.forEach(cb => {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'course_ids[]';
        hiddenInput.value = cb.value;
        hiddenContainer.appendChild(hiddenInput);
        console.log('Added hidden input for course:', cb.value);
      });
      
      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengunggah...';
        
        // Upload thumbnail if selected
        if (thumbnailInput.files.length > 0) {
          const thumbnailUrl = await uploadToServer(thumbnailInput.files[0], 'packages');
          thumbnailUrlInput.value = thumbnailUrl;
        }
        
        // Upload banner if file selected
        if (bannerInput.files.length > 0) {
          const bannerUrl = await uploadToServer(bannerInput.files[0], 'banners');
          bannerUrlInput.value = bannerUrl;
        }
        
        // Submit form
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Tambah';
      }
    });
  }

  // Handle form submission for Edit with file upload
  const editForm = document.getElementById('editPaketForm');
  if (editForm) {
    editForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const thumbnailInput = document.getElementById('editPaketThumbnailInput');
      const bannerInput = document.getElementById('editPaketBannerInput');
      const thumbnailUrlInput = document.getElementById('editPaketThumbnailUrl');
      const bannerImageInput = document.getElementById('editPaketBannerImageUrl');
      const submitBtn = this.querySelector('button[type="submit"]');
      
      // Create hidden inputs for selected courses
      const checkedCourses = document.querySelectorAll('#editCourseDropdown input[type="checkbox"]:checked');
      const hiddenContainer = document.getElementById('editHiddenCourses');
      hiddenContainer.innerHTML = ''; // Clear previous
      checkedCourses.forEach(cb => {
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'course_ids[]';
        hiddenInput.value = cb.value;
        hiddenContainer.appendChild(hiddenInput);
      });
      
      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Mengunggah...';
        
        // Upload thumbnail if new file selected
        if (thumbnailInput.files.length > 0) {
          const publicUrl = await uploadToServer(thumbnailInput.files[0], 'packages');
          thumbnailUrlInput.value = publicUrl;
        }
        
        // Upload banner if new file selected
        if (bannerInput.files.length > 0) {
          const bannerUrl = await uploadToServer(bannerInput.files[0], 'banners');
          bannerImageInput.value = bannerUrl;
        }
        
        // Submit form
        this.submit();
      } catch (error) {
        alert('Gagal mengunggah gambar: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.textContent = 'Edit';
      }
    });
  }
});

// Toggle course dropdown
function toggleCourseDropdown(type) {
  const dropdown = document.getElementById(type + 'CourseDropdown');
  dropdown.classList.toggle('show');
}

// Update selected courses text
function updateSelectedCoursesText(type) {
  const checkboxes = document.querySelectorAll(`#${type}CourseDropdown input[type="checkbox"]:checked`);
  const selectedText = document.getElementById(type + 'SelectedText');
  
  if (checkboxes.length === 0) {
    selectedText.textContent = 'Pilih Kursus';
  } else if (checkboxes.length === 1) {
    selectedText.textContent = checkboxes[0].nextElementSibling.textContent;
  } else {
    selectedText.textContent = `${checkboxes.length} Kursus Dipilih`;
  }
}

// Add event listeners to checkboxes
document.addEventListener('DOMContentLoaded', function() {
  // For tambah modal
  const tambahCheckboxes = document.querySelectorAll('#tambahCourseDropdown input[type="checkbox"]');
  tambahCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => updateSelectedCoursesText('tambah'));
  });
  
  // For edit modal
  const editCheckboxes = document.querySelectorAll('#editCourseDropdown input[type="checkbox"]');
  editCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => updateSelectedCoursesText('edit'));
  });
});

// Close dropdown when clicking outside
document.addEventListener('click', function(event) {
  if (!event.target.closest('.course-select-wrapper')) {
    document.querySelectorAll('.course-dropdown').forEach(dropdown => {
      dropdown.classList.remove('show');
    });
  }
});

function openTambahPaketModal() {
  document.getElementById('tambahPaketModal').style.display = 'flex';
  
  // Reset thumbnail file label
  const thumbnailLabel = document.querySelector('#paketThumbnailInput + .file-input-label span:first-child');
  if (thumbnailLabel) thumbnailLabel.textContent = 'Pilih Thumbnail (Gambar Paket)';
  
  // Reset banner file label
  const bannerLabel = document.querySelector('#paketBannerInput + .file-input-label span:first-child');
  if (bannerLabel) bannerLabel.textContent = 'Pilih Banner (Gambar Landscape/Wide)';
  
  // Reset file inputs
  const thumbnailInput = document.getElementById('paketThumbnailInput');
  const bannerInput = document.getElementById('paketBannerInput');
  if (thumbnailInput) thumbnailInput.value = '';
  if (bannerInput) bannerInput.value = '';
  
  // Reset hidden fields
  const thumbnailUrl = document.getElementById('paketThumbnailUrl');
  const bannerUrl = document.getElementById('paketBannerUrl');
  if (thumbnailUrl) thumbnailUrl.value = '';
  if (bannerUrl) bannerUrl.value = '';
  
  // Reset selections
  document.querySelectorAll('#tambahCourseDropdown input[type="checkbox"]').forEach(cb => cb.checked = false);
  updateSelectedCoursesText('tambah');
}

function closeTambahPaketModal() {
  document.getElementById('tambahPaketModal').style.display = 'none';
}

// Helper function using data attributes
function openEditPaketModalData(button) {
  const id = button.getAttribute('data-id');
  const title = button.getAttribute('data-title');
  const description = button.getAttribute('data-description');
  const price = button.getAttribute('data-price');
  const duration = button.getAttribute('data-duration');
  const courseIds = button.getAttribute('data-course-ids');
  const thumbnail = button.getAttribute('data-thumbnail');
  const isBanner = button.getAttribute('data-is-banner');
  const bannerImage = button.getAttribute('data-banner-image');
  
  openEditPaketModal(id, title, description, price, duration, courseIds, thumbnail, isBanner, bannerImage);
}

function openEditPaketModal(id, title, description, price, duration, courseIds, thumbnail, isBanner, bannerImage) {
  document.getElementById('editPaketTitle').value = title || '';
  document.getElementById('editPaketDescription').value = description || '';
  document.getElementById('editPaketPrice').value = price || '';
  document.getElementById('editPaketDuration').value = duration || '';
  document.getElementById('editPaketThumbnailUrl').value = thumbnail || '';
  document.getElementById('editPaketBannerImageUrl').value = bannerImage || '';
  document.getElementById('editPaketForm').action = `/paket_kursus/${id}/edit`;
  
  // Reset thumbnail file label or show existing filename
  const fileLabel = document.querySelector('#editPaketThumbnailInput + .file-input-label span:first-child');
  const fileInput = document.getElementById('editPaketThumbnailInput');
  
  if (fileLabel && fileInput) {
    // Clear previous file selection
    fileInput.value = '';
    
    if (thumbnail && thumbnail.trim() !== '') {
      // Extract filename from URL or path
      let filename = thumbnail.split('/').pop();
      // Remove query parameters if any
      filename = filename.split('?')[0];
      // Decode URL encoding
      filename = decodeURIComponent(filename);
      
      fileLabel.textContent = filename || 'Pilih Thumbnail (Gambar Paket)';
    } else {
      fileLabel.textContent = 'Pilih Thumbnail (Gambar Paket)';
    }
  }
  
  // Reset banner file label or show existing filename
  const bannerFileLabel = document.querySelector('#editPaketBannerInput + .file-input-label span:first-child');
  const bannerFileInput = document.getElementById('editPaketBannerInput');
  
  if (bannerFileLabel && bannerFileInput) {
    // Clear previous file selection
    bannerFileInput.value = '';
    
    if (bannerImage && bannerImage.trim() !== '') {
      // Extract filename from URL or path
      let filename = bannerImage.split('/').pop();
      // Remove query parameters if any
      filename = filename.split('?')[0];
      // Decode URL encoding
      filename = decodeURIComponent(filename);
      
      bannerFileLabel.textContent = filename || 'Pilih Banner (Gambar Landscape/Wide)';
    } else {
      bannerFileLabel.textContent = 'Pilih Banner (Gambar Landscape/Wide)';
    }
  }
  
  // Reset all checkboxes first
  document.querySelectorAll('#editCourseDropdown input[type="checkbox"]').forEach(cb => cb.checked = false);
  
  // Check the selected courses
  if (courseIds) {
    const selectedIds = courseIds.split(',').filter(id => id.trim() !== '');
    selectedIds.forEach(courseId => {
      const checkbox = document.querySelector(`#editCourseDropdown input[value="${courseId.trim()}"]`);
      if (checkbox) checkbox.checked = true;
    });
  }
  
  updateSelectedCoursesText('edit');
  
  // Setup file input listener for banner in edit form
  const editBannerInput = document.getElementById('editPaketBannerInput');
  if (editBannerInput) {
    // Remove old listener if any
    const newEditBannerInput = editBannerInput.cloneNode(true);
    editBannerInput.parentNode.replaceChild(newEditBannerInput, editBannerInput);
    
    // Add new listener
    newEditBannerInput.addEventListener('change', function(e) {
      const label = this.nextElementSibling.querySelector('span:first-child');
      if (this.files.length > 0) {
        label.textContent = this.files[0].name;
      } else {
        label.textContent = 'Pilih Banner (Gambar Landscape/Wide)';
      }
    });
  }
  
  document.getElementById('editPaketModal').style.display = 'flex';
}

function closeEditPaketModal() {
  document.getElementById('editPaketModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const tambahModal = document.getElementById('tambahPaketModal');
  const editModal = document.getElementById('editPaketModal');
  if (event.target === tambahModal) {
    closeTambahPaketModal();
  }
  if (event.target === editModal) {
    closeEditPaketModal();
  }
}

// Helper function using data attributes
function deletePackageData(button) {
  const id = button.getAttribute('data-id');
  const title = button.getAttribute('data-title');
  showDeletePaketConfirm(id, title);
}

function showDeletePaketConfirm(id, title) {
  deletePaketTarget = { id, title };
  document.getElementById('deletePaketMessage').textContent = `Apakah Anda yakin ingin menghapus paket "${title}"?`;
  document.getElementById('deletePaketModal').style.display = 'flex';
}

function closeDeletePaketModal() {
  document.getElementById('deletePaketModal').style.display = 'none';
  deletePaketTarget = { id: null, title: null };
}

function confirmDeletePaket() {
  if (!deletePaketTarget.id) return;
  
  fetch(`/paket_kursus/${deletePaketTarget.id}`, {
    method: 'DELETE',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(response => {
    if (response.ok) {
      window.location.reload();
    } else {
      console.error('Failed to delete package');
      window.location.reload();
    }
  })
  .catch(error => {
    console.error('Error:', error);
    window.location.reload();
  })
  .finally(() => {
    closeDeletePaketModal();
  });
}

// Close modal when clicking outside
window.onclick = function(event) {
  const deletePaketModal = document.getElementById('deletePaketModal');
  if (event.target === deletePaketModal) {
    closeDeletePaketModal();
  }
}
</script>

