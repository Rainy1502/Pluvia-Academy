{{> head}}
{{> header}}

<main class="site-root">
  <section class="management-page">
    <div class="container">
      <div class="form-container">
        <div class="form-header">
          <h1>{{#if course}}Edit Kursus{{else}}Tambah Kursus Baru{{/if}}</h1>
          <p class="form-subtitle">Lengkapi informasi kursus di bawah ini</p>
        </div>

        {{#if error}}
        <div class="alert alert-error">
          <p>{{error}}</p>
        </div>
        {{/if}}

        <form method="POST" action="{{#if course}}/kursus/{{course.id}}/edit{{else}}/kursus/create{{/if}}" class="admin-form">
          <div class="form-group">
            <label for="title">Nama Kursus <span class="required">*</span></label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              value="{{course.title}}" 
              placeholder="Contoh: Pemrograman Web" 
              required
            />
          </div>

          <div class="form-group">
            <label for="description">Deskripsi</label>
            <textarea 
              id="description" 
              name="description" 
              rows="4" 
              placeholder="Jelaskan tentang kursus ini..."
            >{{course.description}}</textarea>
          </div>

          <div class="form-group">
            <label for="instructor_id">Pengajar</label>
            <select id="instructor_id" name="instructor_id">
              <option value="">-- Pilih Pengajar --</option>
              {{#each lecturers}}
              <option value="{{this.id}}" {{#if (eq this.id ../course.instructor_id)}}selected{{/if}}>
                {{this.full_name}}
              </option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="duration">Durasi (jam)</label>
            <input 
              type="number" 
              id="duration" 
              name="duration" 
              value="{{course.duration}}" 
              placeholder="Contoh: 40"
              min="1"
            />
          </div>

          <div class="form-group">
            <label for="thumbnail">URL Thumbnail</label>
            <input 
              type="url" 
              id="thumbnail" 
              name="thumbnail" 
              value="{{course.thumbnail}}" 
              placeholder="https://example.com/image.jpg"
            />
          </div>

          <div class="form-actions">
            <button type="button" class="btn-secondary" onclick="window.history.back()">Batal</button>
            <button type="submit" class="btn-primary">
              {{#if course}}Simpan Perubahan{{else}}Tambah Kursus{{/if}}
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

{{> footer}}
