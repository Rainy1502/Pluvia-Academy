{{> head}}
{{> header}}

<main class="site-root">
  <section class="management-page">
    <div class="container">
      <div class="form-container">
        <div class="form-header">
          <h1>{{#if material}}Edit Materi{{else}}Tambah Materi Baru{{/if}}</h1>
          <p class="form-subtitle">Lengkapi informasi materi pembelajaran</p>
        </div>

        {{#if error}}
        <div class="alert alert-error">
          <p>{{error}}</p>
        </div>
        {{/if}}

        <form method="POST" action="{{#if material}}/materi/{{material.id}}/edit{{else}}/materi/create{{/if}}" class="admin-form">
          <div class="form-group">
            <label for="title">Judul Materi <span class="required">*</span></label>
            <input 
              type="text" 
              id="title" 
              name="title" 
              value="{{material.title}}" 
              placeholder="Contoh: Pengenalan HTML dan CSS" 
              required
            />
          </div>

          <div class="form-group">
            <label for="category">Kategori <span class="required">*</span></label>
            <input 
              type="text" 
              id="category" 
              name="category" 
              value="{{material.category}}" 
              placeholder="Contoh: Web Development" 
              required
            />
          </div>

          <div class="form-group">
            <label for="summary">Ringkasan</label>
            <textarea 
              id="summary" 
              name="summary" 
              rows="3" 
              placeholder="Ringkasan singkat materi..."
            >{{material.summary}}</textarea>
          </div>

          <div class="form-group">
            <label for="content">Konten Materi</label>
            <textarea 
              id="content" 
              name="content" 
              rows="8" 
              placeholder="Isi lengkap materi pembelajaran..."
            >{{material.content}}</textarea>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="order">Urutan <span class="required">*</span></label>
              <input 
                type="number" 
                id="order" 
                name="order" 
                value="{{material.order}}" 
                placeholder="1" 
                min="1"
                required
              />
            </div>

            <div class="form-group">
              <label for="duration">Durasi (menit)</label>
              <input 
                type="number" 
                id="duration" 
                name="duration" 
                value="{{material.duration}}" 
                placeholder="60"
                min="1"
              />
            </div>
          </div>

          <div class="form-group">
            <label for="thumbnail">URL Thumbnail</label>
            <input 
              type="url" 
              id="thumbnail" 
              name="thumbnail" 
              value="{{material.thumbnail}}" 
              placeholder="https://example.com/image.jpg"
            />
          </div>

          <div class="form-group">
            <label for="video_url">URL Video</label>
            <input 
              type="url" 
              id="video_url" 
              name="video_url" 
              value="{{material.video_url}}" 
              placeholder="https://youtube.com/watch?v=..."
            />
          </div>

          <div class="form-group checkbox-group">
            <label>
              <input 
                type="checkbox" 
                name="is_published" 
                value="true"
                {{#if material.is_published}}checked{{/if}}
              />
              <span>Publikasikan materi ini</span>
            </label>
          </div>

          <div class="form-actions">
            <button type="button" class="btn-secondary" onclick="window.history.back()">Batal</button>
            <button type="submit" class="btn-primary">
              {{#if material}}Simpan Perubahan{{else}}Tambah Materi{{/if}}
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

{{> footer}}
