{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        {{#if isAdmin}}
          <!-- Admin View - Manajemen Materi -->
          <div class="materi-admin-container">
            <h2 class="materi-admin-title">Manajemen Materi</h2>

            {{#if materials.length}}
            <div class="materi-card">
              {{#each materials}}
              <div class="materi-item">
                <div class="materi-info">
                  <div class="materi-icon"></div>
                  <div class="materi-content">
                    <h3 class="materi-title">{{this.title}}</h3>
                    <p class="materi-desc">{{this.summary}}</p>
                  </div>
                </div>
                <div class="materi-actions">
                  <button class="materi-btn materi-btn-tambah" onclick="window.location.href='/materi/{{this.id}}'">Tambah</button>
                  <button class="materi-btn materi-btn-edit" onclick="window.location.href='/materi/{{this.id}}/edit'">Edit</button>
                  <button class="materi-btn materi-btn-hapus" onclick="deleteMaterial('{{this.id}}', '{{this.title}}')">Hapus</button>
                </div>
              </div>
              {{/each}}
            </div>
            {{else}}
            <div class="empty-courses empty-centered">
              <p class="empty-message">Belum ada materi yang ditambahkan.</p>
              <p class="empty-sub">Mulai tambahkan materi untuk platform Anda</p>
              <button class="btn-primary empty-cta" onclick="window.location.href='/materi/create'">Tambah Materi Pertama</button>
            </div>
            {{/if}}
          </div>

        {{else}}
          <!-- Member View - Materi Pembelajaran -->
          <h2 class="my-courses-title">Mau belajar apa hari ini?</h2>
          {{#if materials.length}}
          <div class="my-courses-grid">
            {{#each materials}}
            <div class="my-course-box">
              <div class="box-inner">
                <img src="{{this.thumbnail}}" alt="{{this.title}}" loading="lazy" decoding="async"/>
              </div>
              <div class="course-desc">
                <div class="course-title">{{this.title}}</div>
                <p class="course-sub">{{this.summary}}</p>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada materi untuk ditampilkan.</p>
            <p class="empty-sub">Cobalah membeli paket atau periksa kembali nanti.</p>
            <a href="/paket_kursus" class="btn-primary empty-cta">Beli Paket</a>
          </div>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </section>
</main>

<script>
function deleteMaterial(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus materi "${title}"?`)) {
    fetch(`/materi/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Materi berhasil dihapus');
        window.location.reload();
      } else {
        alert('Gagal menghapus materi');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat menghapus materi');
    });
  }
}
</script>

{{> footer}}
