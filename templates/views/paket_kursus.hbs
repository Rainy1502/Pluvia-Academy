{{> head}}
{{> header}}

<main class="site-root">
  <section class="my-courses-section">
    <div class="container">
      <div class="courses-panel">
        {{#if isAdmin}}
          <!-- Admin View - Manajemen Paket -->
          <div class="page-header">
            <h2 class="my-courses-title">Manajemen Paket</h2>
            <p class="page-subtitle">Kelola seluruh paket kursus yang tersedia dalam sistem</p>
          </div>

          <div class="action-bar" style="margin-bottom: 20px;">
            <button class="btn-primary" onclick="window.location.href='/paket_kursus/create'">
              <span style="font-size:18px; margin-right:8px;">+</span>
              Tambah Paket
            </button>
          </div>

          {{#if packages.length}}
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Thumbnail</th>
                  <th>Nama Paket</th>
                  <th>Jumlah Materi</th>
                  <th>Durasi</th>
                  <th>Harga</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                {{#each packages}}
                <tr>
                  <td>
                    <img src="{{this.thumbnail}}" alt="{{this.title}}" style="width:80px;height:50px;object-fit:cover;border-radius:4px;" />
                  </td>
                  <td><strong>{{this.title}}</strong></td>
                  <td>{{this.material_count}} materi</td>
                  <td>{{this.duration}}</td>
                  <td><strong>{{this.price}}</strong></td>
                  <td>
                    <div class="action-buttons">
                      <button class="btn-small btn-info" onclick="window.location.href='/paket_kursus/{{this.id}}'">Detail</button>
                      <button class="btn-small btn-warning" onclick="window.location.href='/paket_kursus/{{this.id}}/edit'">Edit</button>
                      <button class="btn-small btn-danger" onclick="deletePackage('{{this.id}}', '{{this.title}}')">Hapus</button>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada paket yang ditambahkan.</p>
            <p class="empty-sub">Mulai tambahkan paket untuk platform Anda</p>
            <button class="btn-primary empty-cta" onclick="window.location.href='/paket_kursus/create'">Tambah Paket Pertama</button>
          </div>
          {{/if}}

        {{else}}
          <!-- Member View - Paket Kursus untuk Dibeli -->
          <h2 class="my-courses-title">Paket Kursus</h2>
          {{#if packages.length}}
          <div class="my-courses-grid">
            {{#each packages}}
            <div class="my-course-box package-card">
              {{#if this.badge}}<div class="package-badge">{{this.badge}}</div>{{/if}}
              <div class="box-inner">
                <img src="/img/banner.png" alt="{{this.title}}" loading="lazy" decoding="async"/>
              </div>
              <div class="course-desc">
                <div class="course-title">{{this.title}}</div>
                <p class="package-desc">{{this.description}}</p>
              </div>
              <div class="package-footer">
                <div class="package-price">{{this.price}}</div>
                <a href="/register" class="btn-primary">Beli Paket</a>
              </div>
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="empty-courses empty-centered">
            <p class="empty-message">Belum ada paket kursus yang ditambahkan.</p>
            <p class="empty-sub">Silakan cek kembali nanti atau hubungi administrator untuk menambahkan.</p>
            <a href="/" class="btn-primary empty-cta">Home</a>
          </div>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </section>
</main>

<script>
function deletePackage(id, title) {
  if (confirm(`Apakah Anda yakin ingin menghapus paket "${title}"?`)) {
    fetch(`/paket_kursus/${id}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => {
      if (response.ok) {
        alert('Paket berhasil dihapus');
        window.location.reload();
      } else {
        alert('Gagal menghapus paket');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Terjadi kesalahan saat menghapus paket');
    });
  }
}
</script>

{{> footer}}
