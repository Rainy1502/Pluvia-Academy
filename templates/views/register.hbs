{{> head}}
{{> header}}

<main class="site-root">
  <section class="register-page">
    <div class="container">
      <div class="register-card">
        <div class="register-brand">
          <div class="brand-row">
            <img src="/img/logo-pngegg.png" alt="logo" class="login-logo logo-left" />
            <div class="brand-text">
              <h1>Pluvia Academy</h1>
            </div>
          </div>
          <h2>Daftar Akun</h2>
        </div>

        {{#if error}}
          <div class="alert alert-error">{{error}}</div>
        {{/if}}

        <form action="/register" method="post" class="register-form">
          <input name="username" type="text" placeholder="Nama Pengguna" required class="form-control" />
          <input name="phone" type="tel" placeholder="Nomor HP" required class="form-control" />
          <input name="email" type="email" placeholder="Email" required class="form-control" />
          <div class="input-with-icon">
            <input name="password" type="password" placeholder="Password" required class="form-control password-field" />
            <button type="button" class="btn-icon toggle-password" aria-label="Tampilkan password" title="Tampilkan password">
              <img src="/img/eye-closed.png" data-open="/img/eye-open.png" data-closed="/img/eye-closed.png" alt="toggle" />
            </button>
          </div>
          <div class="input-with-icon">
            <input name="passwordConfirm" type="password" placeholder="Konfirmasi Password" required class="form-control password-field" />
            <button type="button" class="btn-icon toggle-password" aria-label="Tampilkan password" title="Tampilkan password">
              <img src="/img/eye-closed.png" data-open="/img/eye-open.png" data-closed="/img/eye-closed.png" alt="toggle" />
            </button>
          </div>

          <div class="otp-row">
            <input name="otp" type="text" placeholder="Masukkan Kode OTP" class="form-control otp-input" />
            <button type="button" class="btn-secondary otp-btn">Kirim Kode OTP</button>
          </div>

          <div class="register-meta">
            <div class="signup-note">Sudah punya akun? <a href="/login">Login</a></div>
          </div>

          <button class="btn-primary" type="submit">Buat Akun</button>
        </form>
      </div>
    </div>
  </section>
</main>

{{> footer}}
